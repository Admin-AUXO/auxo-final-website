{
  "name": "auxo-homepage",
  "type": "module",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.19.0 <24.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "astro dev --port 4340",
    "build": "astro build",
    "build:fast": "NODE_OPTIONS=\"--max-old-space-size=4096\" astro build",
    "build:check": "npm run lint && npm run build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/",
    "preview": "astro preview --port 4341",
    "type-check": "tsc --noEmit",
    "lint:css": "stylelint \"src/styles/**/*.css\" --allow-empty-input",
    "lint:css:fix": "stylelint \"src/styles/**/*.css\" --fix --allow-empty-input",
    "lint": "npm run type-check && npm run lint:css",
    "lint:fix": "npm run lint:css:fix",
    "validate": "npm run lint && npm run build:check",
    "clean": "rm -rf dist node_modules/.astro",
    "clean:port": "lsof -ti:4340 | xargs kill -9 2>/dev/null || true",
    "clean:all": "npm run clean:port && npm run clean",
    "mcp:playwright": "npx @playwright/mcp --port 3000",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed"
  },
  "dependencies": {
    "@astrojs/node": "^9.5.1",
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/tailwind": "^6.0.2",
    "@emailjs/browser": "^4.4.1",
    "@floating-ui/dom": "^1.7.4",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/simple-icons": "^1.2.63",
    "@sanity/astro": "^3.2.11",
    "@sanity/client": "^7.13.2",
    "@sanity/image-url": "^2.0.2",
    "@sanity/vision": "^5.1.0",
    "@use-gesture/vanilla": "^10.3.1",
    "astro": "^5.14.6",
    "astro-icon": "^1.1.5",
    "embla-carousel": "^8.6.0",
    "embla-carousel-autoplay": "^8.6.0",
    "focus-trap": "^7.7.1",
    "groq": "^5.0.1",
    "lenis": "^1.2.11",
    "notyf": "^3.10.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.18",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@sanity/cli": "^5.0.1",
    "@types/node-fetch": "^2.6.13",
    "astro-edge": "^0.9.3",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.1.2",
    "dotenv": "^17.2.3",
    "node-fetch": "^3.3.2",
    "playwright": "^1.57.0",
    "postcss-preset-env": "^10.5.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-order": "^6.0.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "sharp": "^0.34.5"
  }
}
