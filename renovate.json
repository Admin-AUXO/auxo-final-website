{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreUnstable",
    "group:monorepos",
    "group:recommended",
    "workarounds:all"
  ],
  "schedule": ["before 4am on Monday"],
  "timezone": "America/New_York",
  "labels": ["dependencies"],
  "assignees": ["@admin-auxo-group"],
  "reviewers": ["@admin-auxo-group"],
  "packageRules": [
    {
      "description": "Group Astro-related packages",
      "groupName": "Astro packages",
      "matchPackageNames": ["astro", "@astrojs/**"]
    },
    {
      "description": "Group Sanity-related packages",
      "groupName": "Sanity packages",
      "matchPackageNames": ["@sanity/**", "sanity"]
    },
    {
      "description": "Group testing packages",
      "groupName": "Testing packages",
      "matchPackageNames": ["@playwright/test", "playwright"]
    },
    {
      "description": "Group Tailwind packages",
      "groupName": "Tailwind packages",
      "matchPackageNames": ["tailwindcss", "@tailwindcss/**"]
    },
    {
      "description": "Automerge patch updates for dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Require approval for major updates",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 4am on Monday"]
  }
}
