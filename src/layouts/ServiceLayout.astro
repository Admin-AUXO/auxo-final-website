---
import BaseLayout from "./BaseLayout.astro";
import "../styles/sections/services-individual.css";

export interface Props {
  title: string;
  description: string;
  serviceName: string;
}

const { title, description, serviceName } = Astro.props;
---

<BaseLayout title={`${serviceName} | AUXO Data Labs`} description={description} showParticles={false}>
  <slot name="hero" />
  <slot name="overview" />
  <slot name="benefits" />
  <slot name="process" />
  <slot name="cta" />

  <script>
    import { setupServicePageAnimations } from "../scripts/sections/services/servicePage.js";
    import { setupSectionInit } from "../scripts/sections/utils/initUtils.js";
    setupSectionInit(setupServicePageAnimations);
  </script>
</BaseLayout>
