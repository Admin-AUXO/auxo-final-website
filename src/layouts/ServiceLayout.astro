---
import BaseLayout from "@/layouts/BaseLayout.astro";

export interface Props {
  title: string;
  description: string;
  serviceName: string;
}

const { title, description, serviceName } = Astro.props;
---

<BaseLayout title={`${serviceName} | AUXO Data Labs`} description={description}>
  <div data-service-name={serviceName}>
    <slot name="hero" />
    <slot name="overview" />
    <slot name="benefits" />
    <slot name="process" />
    <slot name="cta" />
  </div>

  <script>
    import { setupServicePageAnimations, cleanupServicePageAnimations } from "@/scripts/sections/services/servicePage";
    import { setupSectionInit } from "@/scripts/sections/utils/initUtils";
    setupSectionInit(setupServicePageAnimations, cleanupServicePageAnimations);
  </script>
</BaseLayout>

