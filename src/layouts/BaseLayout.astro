---
import { siteData } from "../data/config/site";
import Navigation from "../components/common/Navigation.astro";
import Footer from "../components/common/Footer.astro";
import ParticleBackground from "../components/effects/ParticleBackground.astro";
import ScrollProgressBar from "../components/ui/ScrollProgressBar.astro";
import FloatingCalendarButton from "../components/widgets/FloatingCalendarButton.astro";
import CalendarModal from "../components/widgets/CalendarModal.astro";
import { createAssetUrl } from "../utils/url";
import "../styles/global.css";
import "aos/dist/aos.css";
import "notyf/notyf.min.css";

export interface Props {
  title?: string;
  description?: string;
  showParticles?: boolean;
}

const { title, description, showParticles = true } = Astro.props;
const pageTitle = title || siteData.name;
const pageDescription = description || siteData.description;
const ogImage = createAssetUrl("/og-image.svg");
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={pageDescription} />
    <meta name="theme-color" content={siteData.themeColor} />
    <meta name="color-scheme" content="light dark" />
    <title>{pageTitle}</title>

    <link rel="icon" type="image/svg+xml" href={createAssetUrl("/favicon.svg")} />
    <link rel="alternate icon" href={createAssetUrl("/favicon.svg")} />
    <link rel="apple-touch-icon" href={createAssetUrl("/apple-touch-icon.svg")} />
    <link rel="manifest" href={createAssetUrl("/manifest.json")} />
    <meta name="msapplication-TileColor" content={siteData.themeColor} />
    <meta name="msapplication-config" content={createAssetUrl("/browserconfig.xml")} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteData.url} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content={siteData.name} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={siteData.url} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;700;800&display=swap&subset=latin" rel="stylesheet" media="print" onload="this.media='all'" />
    <noscript><link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;700;800&display=swap&subset=latin" rel="stylesheet" /></noscript>
    <link rel="preconnect" href="https://cdn.sanity.io" />
    <link rel="dns-prefetch" href="https://cdn.sanity.io" />
    <link rel="preconnect" href="https://calendar.app.google" crossorigin />
    <link rel="dns-prefetch" href="https://calendar.app.google" />

    <link rel="canonical" href={`${siteData.url}${Astro.url.pathname}`} />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    <script>
      (function initViewTransitions() {
        if (typeof document === 'undefined' || !('startViewTransition' in document)) return;
        const setViewTransitionName = () => {
          const main = document.querySelector('main');
          if (main) {
            main.style.viewTransitionName = 'main-content';
          }
        };
        setViewTransitionName();
        document.addEventListener('astro:before-preparation', setViewTransitionName);
        document.addEventListener('astro:after-swap', setViewTransitionName);
      })();
    </script>
    <script is:inline define:vars={{ baseUrl: import.meta.env.BASE_URL }}>
      (function() {
        if (typeof document === 'undefined' || !document.documentElement || !document.body) return;
        
        const root = document.documentElement;
        const body = document.body;
        
        const stored = localStorage.getItem('theme');
        const prefersLight = window.matchMedia('(prefers-color-scheme: light)').matches;
        const theme = stored || (prefersLight ? 'light' : 'dark');
        root.classList.remove('dark', 'light');
        root.classList.add(theme);
        
        root.classList.add('loading');
        body.classList.add('loading');
        
        const enableScroll = () => {
          root.classList.remove('loading');
          root.classList.add('loaded');
          body.classList.remove('loading');
        };
        
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', enableScroll);
        } else {
          setTimeout(enableScroll, 0);
        }
        
        window.addEventListener('load', enableScroll);
        setTimeout(enableScroll, 100);
      })();
      
      const blockedPatterns = ['fbevents', 'facebook.net', 'connect.facebook.net', 'ERR_BLOCKED_BY_CLIENT', 'segment.io', 'analytics.js'];
      
      window.addEventListener('error', (e) => {
        const target = e.target || e.currentTarget;
        const message = e.message || '';
        const filename = e.filename || '';
        const url = (target && target.src) || '';
        
        if (blockedPatterns.some(pattern => message.includes(pattern) || filename.includes(pattern) || url.includes(pattern))) {
          e.preventDefault();
          e.stopPropagation();
        }
      }, true);
      
      window.addEventListener('unhandledrejection', (e) => {
        const reason = String(e.reason || '');
        if (reason.includes('facebook.net') || reason.includes('fbevents') || reason.includes('ERR_BLOCKED_BY_CLIENT')) {
          e.preventDefault();
        }
      }, true);
      
    </script>
    <script>
      import { setupGoogleCalendar } from "../scripts/widgets/googleCalendar";
      setupGoogleCalendar();
    </script>
  </head>
  <body class="min-h-screen flex flex-col relative bg-primary transition-colors duration-normal">
    <ScrollProgressBar />
    {showParticles && <ParticleBackground />}
    <Navigation />
    <main id="main-content" class="flex-1 relative z-content">
      <slot />
    </main>
    <Footer />
    <FloatingCalendarButton />
    <CalendarModal />

    <script>
      import { initSmoothScroll } from "../scripts/smoothScroll";
      import { initScrollAnimations } from "../scripts/scrollAnimations";
      
      function initLazyLoading() {
        const lazyElements = document.querySelectorAll('[data-lazy-load]');
        if (lazyElements.length === 0) return;

        lazyElements.forEach((element) => {
          const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                const el = entry.target as HTMLElement;
                el.classList.add('lazy-loaded');
                el.removeAttribute('data-lazy-load');
                observer.unobserve(el);
              }
            });
          }, { rootMargin: '50px', threshold: 0.01 });
          
          observer.observe(element);
        });
      }
      
      const initScripts = () => {
        const runInit = () => {
          initSmoothScroll();
          initScrollAnimations();
          initLazyLoading();
        };
        
        if ('requestIdleCallback' in window) {
          requestIdleCallback(runInit, { timeout: 2000 });
        } else {
          setTimeout(runInit, 1);
        }
      };
      
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initScripts);
      } else {
        initScripts();
      }
    </script>
  </body>
</html>
