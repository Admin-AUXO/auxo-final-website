---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <MetaTags
      title={pageTitle}
      description={pageDescription}
      siteName={siteData.name}
      siteUrl={siteData.url}
      themeColor={siteData.themeColor}
    />
    <StructuredData type="Organization" data={organizationSchema} />
    <StructuredData type="WebSite" data={websiteSchema} />
    <StructuredData type="WebPage" data={webPageSchema} />
    <StructuredData type="FAQPage" data={faqSchema} />
    <script>
      (function initViewTransitions() {
        if (typeof document === 'undefined' || !('startViewTransition' in document)) return;
        const setViewTransitionName = () => {
          const main = document.querySelector('main');
          if (main) {
            main.style.viewTransitionName = 'main-content';
          }
        };
        setViewTransitionName();
        document.addEventListener('astro:before-preparation', setViewTransitionName);
        document.addEventListener('astro:after-swap', setViewTransitionName);
      })();
    </script>
    <script is:inline>
      import { logger } from '@/lib/logger';
    </script>
    <script is:inline define:vars={{ baseUrl: import.meta.env.BASE_URL }}>
      (function() {
        if (typeof document === 'undefined' || !document.documentElement || !document.body) return;

        const root = document.documentElement;
        const body = document.body;

        const BREAKPOINTS_MD = 768;
        const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) || window.innerWidth < BREAKPOINTS_MD;
        const stored = localStorage.getItem('theme');
        let theme;

        if (stored) {
          theme = stored;
        } else if (isMobile) {
          theme = 'dark';
        } else {
          const prefersLight = window.matchMedia('(prefers-color-scheme: light)').matches;
          theme = prefersLight ? 'light' : 'dark';
        }

        root.classList.remove('dark', 'light');
        root.classList.add(theme);
        
        root.classList.add('loading');
        body.classList.add('loading');
        
        const enableScroll = () => {
          const removeLoadingState = () => {
            if (document.body && document.documentElement) {
              root.classList.remove('loading');
              root.classList.add('loaded');
              body.classList.remove('loading');
              body.classList.add('loaded');
            }
          };

          setTimeout(removeLoadingState, 200);

          const checkCSSLoaded = () => {
            if (!document.body) return;

            try {
              const testElement = document.createElement('div');
              testElement.style.cssText = 'position: absolute; visibility: hidden;';
              document.body.appendChild(testElement);

              const hasCriticalCSS = window.getComputedStyle(testElement).getPropertyValue('--bg-primary') !== '';
              try {
                if (testElement && testElement.parentNode && testElement.parentNode === document.body) {
                  document.body.removeChild(testElement);
                }
              } catch (removeError) {
                try {
                  if (testElement && testElement.parentNode) {
                    testElement.parentNode.removeChild(testElement);
                  }
                } catch (e2) {}
              }

              if (!hasCriticalCSS) {
                setTimeout(checkCSSLoaded, 50);
              }
            } catch (e) {
              setTimeout(checkCSSLoaded, 50);
            }
          };

          setTimeout(checkCSSLoaded, 10);
        };
        
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', enableScroll);
        } else {
          setTimeout(enableScroll, 0);
        }

        window.addEventListener('load', enableScroll);
        setTimeout(enableScroll, 100);

        setTimeout(() => {
          if (document.body && document.documentElement) {
            root.classList.remove('loading');
            root.classList.add('loaded');
            body.classList.remove('loading');
            body.classList.add('loaded');
          }
        }, 1000);
      })();
      
      const blockedPatterns = ['fbevents', 'facebook.net', 'connect.facebook.net', 'ERR_BLOCKED_BY_CLIENT', 'segment.io', 'analytics.js'];

      const recaptchaPatterns = [
        'recaptcha', '6LeQgtsa', 'google.com/recaptcha', 'private-token',
        'message channel closed', 'Unrecognized feature', '401', 'Unauthorized',
        'calendar.app.google', 'calendar.google.com', 'api2/pat', 'goog.net.XhrIo',
        'Object is active with another request', 'newUri='
      ];

      const extensionPatterns = [
        'Could not establish connection', 'Receiving end does not exist',
        'wrappedSendMessageCallback', 'polyfill.js', 'chrome-extension://',
        'moz-extension://', 'safari-extension://', 'frame_start.js',
        'Failed to execute \'removeChild\'', 'is not a child of this node',
        'A listener indicated an asynchronous response'
      ];

      const crossOriginPatterns = [
        'auxodata.com/_astro/page.js', 'auxodata.com/_astro/hoisted.js',
        'https://auxodata.com/_astro/', '/_astro/page.js', '/_astro/hoisted.js'
      ];

      const originalConsoleError = console.error;
      const originalConsoleWarn = console.warn;

      console.error = function(...args) {
        const message = args.join(' ');
        if (
          extensionPatterns.some(p => message.includes(p)) ||
          crossOriginPatterns.some(p => message.includes(p)) ||
          recaptchaPatterns.some(p => message.includes(p)) ||
          blockedPatterns.some(p => message.includes(p))
        ) {
          return;
        }
        originalConsoleError.apply(console, args);
      };

      console.warn = function(...args) {
        const message = args.join(' ');
        if (
          extensionPatterns.some(p => message.includes(p)) ||
          crossOriginPatterns.some(p => message.includes(p)) ||
          recaptchaPatterns.some(p => message.includes(p)) ||
          blockedPatterns.some(p => message.includes(p))
        ) {
          return;
        }
        originalConsoleWarn.apply(console, args);
      };

      window.addEventListener('error', (e) => {
        const target = e.target || e.currentTarget;
        const message = e.message || '';
        const filename = e.filename || '';
        const url = (target && target.src) || '';

        if (blockedPatterns.some(pattern => message.includes(pattern) || filename.includes(pattern) || url.includes(pattern))) {
          e.preventDefault();
          e.stopPropagation();
          return;
        }

        if (recaptchaPatterns.some(pattern => message.includes(pattern) || filename.includes(pattern) || url.includes(pattern))) {
          e.preventDefault();
          e.stopPropagation();
          return;
        }

        if (extensionPatterns.some(pattern => message.includes(pattern) || filename.includes(pattern) || url.includes(pattern))) {
          e.preventDefault();
          e.stopPropagation();
          return;
        }

        if (crossOriginPatterns.some(pattern => message.includes(pattern) || filename.includes(pattern) || url.includes(pattern))) {
          e.preventDefault();
          e.stopPropagation();
          return;
        }
      }, true);
      
      window.addEventListener('unhandledrejection', (e) => {
        const reason = String(e.reason || '');
        if (reason.includes('facebook.net') || reason.includes('fbevents') || reason.includes('ERR_BLOCKED_BY_CLIENT')) {
          e.preventDefault();
          return;
        }

        if (recaptchaPatterns.some(pattern => reason.includes(pattern))) {
          e.preventDefault();
          return;
        }

        if (extensionPatterns.some(pattern => reason.includes(pattern))) {
          e.preventDefault();
          return;
        }

        if (crossOriginPatterns.some(pattern => reason.includes(pattern))) {
          e.preventDefault();
          return;
        }
      }, true);
      
    </script>
  </head>
  <body class="min-h-screen bg-primary transition-colors duration-normal">
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-N6547BGW"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>

    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[2147483648] focus:px-4 focus:py-2 focus:bg-accent-green focus:text-text-on-accent focus:rounded-md focus:shadow-lg focus:font-medium transition-all duration-fast"
    >
      Skip to main content
    </a>

    <ScrollProgressBar />
    <Navigation />
    <main id="main-content" class="relative z-content" style="padding-top: var(--nav-current-height); min-height: calc(100vh - var(--nav-current-height));">
      <slot />
    </main>
    <Footer />
    <FloatingCalendarButton />
    <CalendarModal />
    <CookieConsent />

    <script>
      import { initCoreFeatures, reinitOnPageLoad, initPageFeatures } from "@/scripts/core/init";
      import { initTabEngagement } from "@/scripts/utils/tabEngagement";

      if ('scrollRestoration' in history) {
        history.scrollRestoration = 'manual';
      }

      const handleScrollRestoration = () => {
        try {
          const scrollY = sessionStorage.getItem('scroll-position');
          if (scrollY && parseInt(scrollY) > 0 && !window.location.hash) {
            requestAnimationFrame(() => {
              try {
                window.scrollTo({ top: parseInt(scrollY, 10), behavior: 'instant' });
              } catch (e) {
              }
            });
          }
        } catch (e) {
        }
        try {
          sessionStorage.removeItem('scroll-position');
        } catch (e) {
        }
      };

      const saveScrollPosition = () => {
        try {
          sessionStorage.setItem('scroll-position', window.scrollY.toString());
        } catch (e) {
        }
      };

      let scrollCleanup: (() => void) | null = null;

      document.addEventListener('astro:before-preparation', saveScrollPosition);
      document.addEventListener('astro:page-load', handleScrollRestoration);

      const initMobileScrollOptimizations = () => {
        // Minimal mobile optimizations to avoid interfering with scroll
      };

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initMobileScrollOptimizations);
      } else {
        initMobileScrollOptimizations();
      }

      const waitForCSS = () => {
        return new Promise((resolve) => {
          let timeoutId: number;
          let attempts = 0;
          const maxAttempts = 100;

          const checkCSS = () => {
            attempts++;
            if (attempts > maxAttempts) {
              resolve(true);
              return;
            }

            if (!document.body) {
              timeoutId = window.setTimeout(checkCSS, 50);
              return;
            }

            try {
              const testElement = document.createElement('div');
              testElement.style.cssText = 'position: absolute; visibility: hidden; pointer-events: none;';
              document.body.appendChild(testElement);

              const styles = window.getComputedStyle(testElement);
              const hasCriticalCSS = styles.getPropertyValue('--bg-primary') !== '' &&
                                     styles.getPropertyValue('--text-primary') !== '';

              try {
                if (testElement && testElement.parentNode && testElement.parentNode === document.body) {
                  document.body.removeChild(testElement);
                }
              } catch (removeError) {
                try {
                  if (testElement && testElement.parentNode) {
                    testElement.parentNode.removeChild(testElement);
                  }
                } catch (e2) {}
              }

              if (hasCriticalCSS) {
                resolve(true);
              } else {
                timeoutId = window.setTimeout(checkCSS, 50);
              }
            } catch (e) {
              timeoutId = window.setTimeout(checkCSS, 50);
            }
          };

          if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', () => {
              clearTimeout(timeoutId);
              checkCSS();
            });
          } else {
            checkCSS();
          }
        });
      };

      const initAll = async () => {
        await waitForCSS();
        initCoreFeatures();
        initPageFeatures();

        setTimeout(() => {
          try {
            initTabEngagement({
              titleMessages: [
                'ðŸ‘‹ Come back to AUXO!',
                'âœ¨ Your data insights await',
                'ðŸ“Š Transform your analytics',
                'âš¡ AUXO Data Labs',
              ],
              titleInterval: 2000,
              faviconEnabled: true,
              inactivityThreshold: 300000,
              showWelcomeBack: true,
            });
          } catch (e) {
            console.error('Tab engagement init error:', e);
          }
        }, 500);
      };

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initAll);
      } else {
        initAll();
      }

      document.addEventListener('astro:before-swap', () => {
        if (scrollCleanup) {
          scrollCleanup();
          scrollCleanup = null;
        }
      });

      document.addEventListener('astro:page-load', async () => {
        await waitForCSS();
        reinitOnPageLoad();
        setTimeout(() => {
          initPageFeatures();
          initMobileScrollOptimizations();
        }, 100);
      });
    </script>
  </body>
</html>
