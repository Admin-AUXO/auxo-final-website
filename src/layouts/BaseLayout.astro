---
import { getSiteConfigData } from "../lib/sanity/siteConfig";
import Navigation from "../components/common/Navigation.astro";
import Footer from "../components/common/Footer.astro";
import MetaTags from "../components/common/MetaTags.astro";
import ScrollProgressBar from "../components/ui/ScrollProgressBar.astro";
import FloatingCalendarButton from "../components/widgets/FloatingCalendarButton.astro";
import CalendarModal from "../components/widgets/CalendarModal.astro";
import ParticleBackground from "../components/effects/ParticleBackground.astro";
import "../styles/global.css";
import "notyf/notyf.min.css";

import "../styles/base/reset.css";
import "../styles/base.css";

export interface Props {
  title?: string;
  description?: string;
  showParticles?: boolean;
}

const { title, description, showParticles = true } = Astro.props;

const siteData = await getSiteConfigData();
const pageTitle = title || siteData.name;
const pageDescription = description || siteData.description;
---

<!doctype html>
<html lang="en" class="dark" data-show-particles={showParticles}>
  <head>
    <MetaTags 
      title={pageTitle}
      description={pageDescription}
      siteName={siteData.name}
      siteUrl={siteData.url}
      themeColor={siteData.themeColor}
    />
    <script>
      (function initViewTransitions() {
        if (typeof document === 'undefined' || !('startViewTransition' in document)) return;
        const setViewTransitionName = () => {
          const main = document.querySelector('main');
          if (main) {
            main.style.viewTransitionName = 'main-content';
          }
        };
        setViewTransitionName();
        document.addEventListener('astro:before-preparation', setViewTransitionName);
        document.addEventListener('astro:after-swap', setViewTransitionName);
      })();
    </script>
    <script is:inline define:vars={{ baseUrl: import.meta.env.BASE_URL }}>
      (function() {
        if (typeof document === 'undefined' || !document.documentElement || !document.body) return;

        const root = document.documentElement;
        const body = document.body;

        const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) || window.innerWidth < 768;
        const stored = localStorage.getItem('theme');
        let theme;

        if (stored) {
          theme = stored;
        } else if (isMobile) {
          theme = 'dark';
        } else {
          const prefersLight = window.matchMedia('(prefers-color-scheme: light)').matches;
          theme = prefersLight ? 'light' : 'dark';
        }

        root.classList.remove('dark', 'light');
        root.classList.add(theme);
        
        root.classList.add('loading');
        body.classList.add('loading');
        
        const enableScroll = () => {
          const removeLoadingState = () => {
            if (document.body && document.documentElement) {
              root.classList.remove('loading');
              root.classList.add('loaded');
              body.classList.remove('loading');
              body.classList.add('loaded');
            }
          };

          setTimeout(removeLoadingState, 200);

          const checkCSSLoaded = () => {
            if (!document.body) return;

            try {
              const testElement = document.createElement('div');
              testElement.style.cssText = 'position: absolute; visibility: hidden;';
              document.body.appendChild(testElement);

              const hasCriticalCSS = window.getComputedStyle(testElement).getPropertyValue('--bg-primary') !== '';
              if (testElement.parentNode) {
                document.body.removeChild(testElement);
              }

              if (!hasCriticalCSS) {
                setTimeout(checkCSSLoaded, 50);
              }
            } catch (e) {
              setTimeout(checkCSSLoaded, 50);
            }
          };

          setTimeout(checkCSSLoaded, 10);
        };
        
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', enableScroll);
        } else {
          setTimeout(enableScroll, 0);
        }

        window.addEventListener('load', enableScroll);
        setTimeout(enableScroll, 100);

        setTimeout(() => {
          if (document.body && document.documentElement) {
            root.classList.remove('loading');
            root.classList.add('loaded');
            body.classList.remove('loading');
            body.classList.add('loaded');
          }
        }, 3000);
      })();
      
      const blockedPatterns = ['fbevents', 'facebook.net', 'connect.facebook.net', 'ERR_BLOCKED_BY_CLIENT', 'segment.io', 'analytics.js'];
      
      const recaptchaPatterns = [
        'recaptcha', '6LeQgtsa', 'google.com/recaptcha', 'private-token',
        'message channel closed', 'Unrecognized feature', '401', 'Unauthorized',
        'calendar.app.google', 'calendar.google.com', 'api2/pat', 'goog.net.XhrIo',
        'Object is active with another request', 'newUri='
      ];
      
      window.addEventListener('error', (e) => {
        const target = e.target || e.currentTarget;
        const message = e.message || '';
        const filename = e.filename || '';
        const url = (target && target.src) || '';

        if (blockedPatterns.some(pattern => message.includes(pattern) || filename.includes(pattern) || url.includes(pattern))) {
          e.preventDefault();
          e.stopPropagation();
          return;
        }

        if (recaptchaPatterns.some(pattern => message.includes(pattern) || filename.includes(pattern) || url.includes(pattern))) {
          e.preventDefault();
          e.stopPropagation();
          return;
        }
      }, true);
      
      window.addEventListener('unhandledrejection', (e) => {
        const reason = String(e.reason || '');
        if (reason.includes('facebook.net') || reason.includes('fbevents') || reason.includes('ERR_BLOCKED_BY_CLIENT')) {
          e.preventDefault();
          return;
        }

        if (recaptchaPatterns.some(pattern => reason.includes(pattern))) {
          e.preventDefault();
          return;
        }
      }, true);
      
    </script>
  </head>
  <body class="min-h-screen flex flex-col relative bg-primary transition-colors duration-normal">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[2147483648] focus:px-4 focus:py-2 focus:bg-accent-green focus:text-text-on-accent focus:rounded-md focus:shadow-lg focus:font-medium transition-all duration-fast"
    >
      Skip to main content
    </a>

    <ScrollProgressBar />
    {showParticles && <ParticleBackground />}
    <Navigation />
    <main id="main-content" class="flex-1 relative z-content pt-16 lg:pt-18">
      <slot />
    </main>
    <Footer />
    <FloatingCalendarButton />
    <CalendarModal />

    <script>
      import { initCoreFeatures, reinitOnPageLoad, initPageFeatures } from "@/scripts/core/init";

      if ('scrollRestoration' in history) {
        history.scrollRestoration = 'manual';
      }

      const handleScrollRestoration = () => {
        const scrollY = sessionStorage.getItem('scroll-position');
        if (scrollY && parseInt(scrollY) > 0 && !window.location.hash) {
          requestAnimationFrame(() => {
            window.scrollTo({ top: parseInt(scrollY, 10), behavior: 'instant' });
          });
        }
        sessionStorage.removeItem('scroll-position');
      };

      const saveScrollPosition = () => {
        sessionStorage.setItem('scroll-position', window.scrollY.toString());
      };

      let scrollCleanup: (() => void) | null = null;

      document.addEventListener('astro:before-preparation', saveScrollPosition);
      document.addEventListener('astro:page-load', handleScrollRestoration);

      const initMobileScrollOptimizations = () => {
        // Minimal mobile optimizations to avoid interfering with scroll
      };

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initMobileScrollOptimizations);
      } else {
        initMobileScrollOptimizations();
      }

      const waitForCSS = () => {
        return new Promise((resolve) => {
          const checkCSS = () => {
            if (!document.body) {
              setTimeout(checkCSS, 50);
              return;
            }

            try {
              const testElement = document.createElement('div');
              testElement.style.cssText = 'position: absolute; visibility: hidden; pointer-events: none;';
              document.body.appendChild(testElement);

              const styles = window.getComputedStyle(testElement);
              const hasCriticalCSS = styles.getPropertyValue('--bg-primary') !== '' &&
                                     styles.getPropertyValue('--text-primary') !== '';

              if (testElement.parentNode) {
                document.body.removeChild(testElement);
              }

              if (hasCriticalCSS) {
                resolve(true);
              } else {
                setTimeout(checkCSS, 50);
              }
            } catch (e) {
              setTimeout(checkCSS, 50);
            }
          };

          if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', checkCSS);
          } else {
            checkCSS();
          }
        });
      };

      const initAll = async () => {
        await waitForCSS();
        const showParticles = document.documentElement.dataset.showParticles === 'true';
        initCoreFeatures();
        initPageFeatures(showParticles);
      };

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initAll);
      } else {
        initAll();
      }

      document.addEventListener('astro:page-load', async () => {
        if (scrollCleanup) {
          scrollCleanup();
          scrollCleanup = null;
        }
        await waitForCSS();
        const newShowParticles = document.documentElement.dataset.showParticles === 'true';
        reinitOnPageLoad();
        setTimeout(() => {
          initPageFeatures(newShowParticles);
          initMobileScrollOptimizations();
        }, 100);

      });
    </script>
  </body>
</html>

