---
import { getSiteConfigData } from "@/lib/sanity/siteConfig";

export interface Props {
  email?: string;
  title?: string;
  intro?: string;
}

const siteData = await getSiteConfigData();
const { 
  email = siteData.privacyEmail,
  title = "Contact Us",
  intro = "If you have any questions, please contact us at:"
} = Astro.props;
---

<h2>{title}</h2>
<p>{intro}</p>
<p>
  <strong>Email:</strong> <a href={`mailto:${email}`}>{email}</a><br />
  <strong>Address:</strong> {siteData.address.street}, {siteData.address.city}, {siteData.address.country}
</p>

