---
import { Icon } from "astro-icon/components";
---

<button
  id="floating-calendar-button"
  type="button"
  data-google-calendar-open
  class="floating-calendar-btn"
  aria-label="Schedule a meeting with AUXO Data Labs"
  title="Book an appointment"
>
  <Icon name="mdi:calendar-clock" class="floating-calendar-icon" />
  <span class="sr-only">Schedule a meeting</span>
</button>

<style>
  .floating-calendar-btn {
    position: fixed;
    bottom: 1rem;
    right: 1rem;
    z-index: 9998;
    width: 3.5rem;
    height: 3.5rem;
    min-width: 3.5rem;
    min-height: 3.5rem;
    max-width: 3.5rem;
    max-height: 3.5rem;
    border-radius: 50%;
    background-color: var(--accent-green, #7CB342);
    color: #000;
    border: 2px solid rgba(163, 230, 53, 0.3);
    box-shadow: 0 4px 20px rgba(163, 230, 53, 0.4), 0 0 0 3px rgba(163, 230, 53, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    touch-action: manipulation;
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }

  .floating-calendar-icon {
    width: 1.5rem;
    height: 1.5rem;
    pointer-events: none;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .floating-calendar-btn:hover {
    border-color: rgba(163, 230, 53, 0.5);
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 8px 32px rgba(163, 230, 53, 0.5), 0 0 0 4px rgba(163, 230, 53, 0.3);
  }

  .floating-calendar-btn:hover .floating-calendar-icon {
    transform: rotate(12deg);
  }

  .floating-calendar-btn:active {
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 4px 16px rgba(163, 230, 53, 0.4), 0 0 0 3px rgba(163, 230, 53, 0.25);
  }

  .floating-calendar-btn:focus-visible {
    outline: 2px solid var(--accent-green, #7CB342);
    outline-offset: 4px;
    border-color: rgba(163, 230, 53, 0.6);
  }

  @media (min-width: 640px) and (max-width: 1023px) {
    .floating-calendar-btn {
      bottom: 1.5rem;
      right: 1.5rem;
      width: 4rem;
      height: 4rem;
      min-width: 4rem;
      min-height: 4rem;
      max-width: 4rem;
      max-height: 4rem;
    }

    .floating-calendar-icon {
      width: 1.75rem;
      height: 1.75rem;
    }
  }

  @media (min-width: 1024px) {
    .floating-calendar-btn {
      bottom: 2rem;
      right: 2rem;
      width: 4rem;
      height: 4rem;
      min-width: 4rem;
      min-height: 4rem;
      max-width: 4rem;
      max-height: 4rem;
    }

    .floating-calendar-icon {
      width: 1.75rem;
      height: 1.75rem;
    }
  }

  @media (max-width: 639px) {
    .floating-calendar-btn {
      bottom: 1rem;
      right: 1rem;
      width: 3.5rem;
      height: 3.5rem;
      min-width: 3.5rem;
      min-height: 3.5rem;
      max-width: 3.5rem;
      max-height: 3.5rem;
    }

    .floating-calendar-icon {
      width: 1.5rem;
      height: 1.5rem;
    }
  }

  @media (max-height: 600px) and (max-width: 1023px) {
    .floating-calendar-btn {
      bottom: 0.75rem;
      right: 0.75rem;
      width: 3rem;
      height: 3rem;
      min-width: 3rem;
      min-height: 3rem;
      max-width: 3rem;
      max-height: 3rem;
    }

    .floating-calendar-icon {
      width: 1.25rem;
      height: 1.25rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .floating-calendar-btn,
    .floating-calendar-icon {
      transition: none;
    }
    
    .floating-calendar-btn:hover {
      transform: none;
    }

    .floating-calendar-btn:hover .floating-calendar-icon {
      transform: none;
    }
  }
</style>
