// FAB is positioned with CSS - no DOM manipulation needed
<button
  id="floating-calendar-button"
  type="button"
  data-google-calendar-open
  class="fab-button"
  aria-label="Schedule a meeting with AUXO Data Labs"
  title="Book an appointment"
>
  <svg class="fab-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
  </svg>
  <span class="sr-only">Schedule a meeting</span>
</button>

<style>
  .fab-button {
    /* Core positioning - always visible FAB */
    position: fixed !important;
    bottom: 1.5rem !important;
    right: 1.5rem !important;
    z-index: 40 !important; /* Below navigation (z-50) but above content */

    /* Visual styling */
    width: 3.5rem;
    height: 3.5rem;
    border-radius: 50%;
    background: var(--accent-green);
    color: var(--text-on-accent);
    border: 2px solid var(--accent-green-opacity-30);
    box-shadow: 0 4px 20px var(--accent-green-opacity-20);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    touch-action: manipulation;
    user-select: none;
    will-change: transform;
    transform: translateZ(0);
    backface-visibility: hidden;
    transition: all 0.2s ease;
    opacity: 1;
    pointer-events: auto;
    isolation: isolate;
    contain: none;
  }

  .fab-icon {
    width: 1.5rem;
    height: 1.5rem;
    transition: transform 0.2s ease;
  }

  .fab-button:hover {
    border-color: var(--accent-green-opacity-40);
    box-shadow: 0 8px 32px var(--accent-green-opacity-30);
    transform: translateZ(0) translateY(-2px) scale(1.05);
  }

  .fab-button:hover .fab-icon {
    transform: rotate(12deg) scale(1.1);
  }

  .fab-button:active {
    transform: translateZ(0) translateY(-1px) scale(1.02);
    box-shadow: 0 4px 16px var(--accent-green-opacity-25);
  }

  .fab-button:focus-visible {
    outline: 2px solid var(--accent-green);
    outline-offset: 2px;
  }

  @media (min-width: 640px) {
    .fab-button {
      bottom: 2rem;
      right: 2rem;
      width: 4rem;
      height: 4rem;
    }

    .fab-icon {
      width: 1.75rem;
      height: 1.75rem;
    }
  }

  @media (min-width: 1024px) {
    .fab-button {
      bottom: 2.5rem;
      right: 2.5rem;
    }
  }

  @media (max-height: 600px) {
    .fab-button {
      bottom: 1rem;
      right: 1rem;
      width: 3rem;
      height: 3rem;
    }

    .fab-icon {
      width: 1.25rem;
      height: 1.25rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .fab-button,
    .fab-icon {
      transition: none;
    }

    .fab-button:hover {
      transform: translateZ(0) translateY(0) scale(1);
    }

    .fab-button:hover .fab-icon {
      transform: none;
    }
  }

  @media (prefers-contrast: high) {
    .fab-button {
      border-width: 3px;
    }
  }

  @media print {
    .fab-button {
      display: none;
    }
  }

  /* Ensure FAB doesn't interfere with mobile navigation */
  @media (max-width: 1023px) {
    .fab-button {
      /* Adjust position to account for mobile menu close button */
      bottom: calc(1.5rem + 56px); /* Account for navigation height + spacing */
    }
  }

  @media (max-width: 1023px) and (max-height: 600px) {
    .fab-button {
      /* Further adjust for small screens */
      bottom: calc(1rem + 56px);
    }
  }
</style>

