---
import { Icon } from "astro-icon/components";
---

<button
  id="floating-calendar-button"
  type="button"
  data-google-calendar-open
  class="floating-calendar-btn fixed bottom-6 right-6 z-[9999] w-14 h-14 sm:w-16 sm:h-16 rounded-full bg-accent-green text-black shadow-lg shadow-accent-green/40 hover:shadow-xl hover:shadow-accent-green/50 hover:scale-110 active:scale-95 transition-all duration-300 flex items-center justify-center group"
  aria-label="Schedule a meeting with AUXO Data Labs"
  title="Book an appointment"
>
  <Icon name="mdi:calendar-clock" class="w-6 h-6 sm:w-7 sm:h-7 group-hover:rotate-12 transition-transform duration-300" />
  <span class="sr-only">Schedule a meeting</span>
</button>

<style>
  .floating-calendar-btn {
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: 2px solid rgba(163, 230, 53, 0.3);
  }

  .floating-calendar-btn:hover {
    border-color: rgba(163, 230, 53, 0.5);
    transform: translateY(-2px) scale(1.1);
  }

  .floating-calendar-btn:active {
    transform: translateY(0) scale(0.95);
  }

  .floating-calendar-btn:focus-visible {
    outline: 2px solid var(--accent-green);
    outline-offset: 4px;
  }

  @media (max-width: 640px) {
    .floating-calendar-btn {
      bottom: 1rem;
      right: 1rem;
      width: 3.5rem;
      height: 3.5rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .floating-calendar-btn {
      transition: none;
    }
    
    .floating-calendar-btn:hover {
      transform: none;
    }
  }
</style>
