---
import { Icon } from "astro-icon/components";
---

<button
  id="floating-calendar-button"
  type="button"
  data-google-calendar-open
  class="floating-calendar-btn"
  aria-label="Schedule a meeting with AUXO Data Labs"
  title="Book an appointment"
>
  <Icon name="mdi:calendar-clock" class="floating-calendar-icon" />
  <span class="sr-only">Schedule a meeting</span>
</button>

<script>
  function initFloatingButton() {
    const button = document.getElementById('floating-calendar-button');
    if (!button) return;

    // Ensure button is positioned as direct child of body for proper fixed positioning
    if (button.parentElement !== document.body) {
      document.body.appendChild(button);
    }

    // Basic viewport boundary check (simplified)
    const checkViewportBounds = () => {
      const rect = button.getBoundingClientRect();
      if (rect.bottom > window.innerHeight) {
        button.style.bottom = '1rem';
      }
      if (rect.right > window.innerWidth) {
        button.style.right = '1rem';
      }
    };

    // Initialize and set up minimal event listeners
    checkViewportBounds();
    window.addEventListener('resize', checkViewportBounds, { passive: true });
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFloatingButton, { once: true });
  } else {
    initFloatingButton();
  }
</script>

<style>
  .floating-calendar-btn {
    position: fixed;
    bottom: max(var(--spacing-md, 1rem), env(safe-area-inset-bottom, 1rem));
    right: max(var(--spacing-md, 1rem), env(safe-area-inset-right, 1rem));
    z-index: 9999;
    width: 3.5rem;
    height: 3.5rem;
    border-radius: 50%;
    background-color: var(--accent-green);
    color: var(--text-on-accent);
    border: 2px solid var(--accent-green-opacity-30);
    box-shadow: 0 4px 20px var(--accent-green-opacity-2), 0 0 0 3px var(--accent-green-opacity-1);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    pointer-events: auto;
    transition: all var(--duration-normal) var(--easing-standard);
    backdrop-filter: blur(var(--blur-nav));
    -webkit-backdrop-filter: blur(var(--blur-nav));
    touch-action: manipulation;
    will-change: transform;
    transform: translateZ(0);
    -webkit-transform: translateZ(0);
    transform-origin: center;
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    user-select: none;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    contain: none;
    /* Prevent any parent containment from affecting positioning */
    isolation: isolate;
  }

  .floating-calendar-icon {
    width: 1.5rem;
    height: 1.5rem;
    pointer-events: none;
    transition: transform var(--duration-normal) var(--easing-standard);
  }

  .floating-calendar-btn:hover {
    border-color: var(--accent-green-opacity-30);
    transform: translateY(var(--transform-translate-y-card-hover)) scale(1.05);
    box-shadow: 0 8px 32px var(--accent-green-opacity-30), 0 0 0 4px var(--accent-green-opacity-25);
  }

  .floating-calendar-btn:hover .floating-calendar-icon {
    transform: rotate(12deg);
  }

  .floating-calendar-btn:active {
    transform: translateY(var(--hover-lift-distance-sm)) scale(1.02);
    box-shadow: 0 4px 16px var(--accent-green-opacity-2), 0 0 0 3px var(--accent-green-opacity-25);
  }

  .floating-calendar-btn:focus-visible {
    outline: var(--focus-ring-width) solid var(--accent-green);
    outline-offset: var(--spacing-xs);
    border-color: var(--accent-green-opacity-30);
  }

  /* Tablet styles */
  @media (min-width: 640px) and (max-width: 1023px) {
    .floating-calendar-btn {
      bottom: max(var(--spacing-lg, 1.5rem), env(safe-area-inset-bottom, 1.5rem));
      right: max(var(--spacing-lg, 1.5rem), env(safe-area-inset-right, 1.5rem));
      width: 4rem;
      height: 4rem;
    }

    .floating-calendar-icon {
      width: 1.75rem;
      height: 1.75rem;
    }
  }

  /* Desktop styles */
  @media (min-width: 1024px) {
    .floating-calendar-btn {
      bottom: max(var(--spacing-xl, 2rem), env(safe-area-inset-bottom, 2rem));
      right: max(var(--spacing-xl, 2rem), env(safe-area-inset-right, 2rem));
      width: 4rem;
      height: 4rem;
    }

    .floating-calendar-icon {
      width: 1.75rem;
      height: 1.75rem;
    }
  }

  /* Mobile styles */
  @media (max-width: 639px) {
    .floating-calendar-btn {
      bottom: max(var(--spacing-md, 1rem), env(safe-area-inset-bottom, 1rem));
      right: max(var(--spacing-md, 1rem), env(safe-area-inset-right, 1rem));
      width: 3.5rem;
      height: 3.5rem;
    }

    .floating-calendar-icon {
      width: 1.5rem;
      height: 1.5rem;
    }
  }

  /* Low height devices */
  @media (max-height: 600px) and (max-width: 1023px) {
    .floating-calendar-btn {
      bottom: max(var(--spacing-sm, 0.75rem), env(safe-area-inset-bottom, 0.75rem));
      right: max(var(--spacing-sm, 0.75rem), env(safe-area-inset-right, 0.75rem));
      width: 3rem;
      height: 3rem;
    }

    .floating-calendar-icon {
      width: 1.25rem;
      height: 1.25rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .floating-calendar-btn,
    .floating-calendar-icon {
      transition: none;
    }
    
    .floating-calendar-btn:hover {
      transform: none;
    }

    .floating-calendar-btn:hover .floating-calendar-icon {
      transform: none;
    }
  }
</style>

