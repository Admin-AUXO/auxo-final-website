<button
  id="floating-calendar-button"
  type="button"
  data-google-calendar-open
  class="fab-button"
  aria-label="Schedule a meeting with AUXO Data Labs"
  title="Book an appointment"
>
  <svg class="fab-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
  </svg>
  <span class="sr-only">Schedule a meeting</span>
</button>

<style>
  .fab-button {
    position: fixed;
    bottom: 1.5rem;
    right: 1.5rem;
    z-index: var(--z-floating-button);
    width: 3.5rem;
    height: 3.5rem;
    border-radius: 50%;
    background: var(--accent-green);
    color: var(--text-on-accent);
    border: 2px solid var(--accent-green-opacity-30);
    box-shadow: 0 4px 20px var(--accent-green-opacity-20);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    touch-action: manipulation;
    user-select: none;
    will-change: transform;
    contain: layout style paint;
    transform: translateZ(0);
    backface-visibility: hidden;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 1;
    pointer-events: auto;
    isolation: isolate;
  }

  .fab-icon {
    width: 1.5rem;
    height: 1.5rem;
    transition: transform 0.2s ease;
  }

  .fab-button:hover {
    border-color: var(--accent-green-opacity-40);
    box-shadow: 0 8px 32px var(--accent-green-opacity-30);
    transform: translateY(-2px) scale(1.05);
  }

  .fab-button:hover .fab-icon {
    transform: rotate(12deg) scale(1.1);
  }

  .fab-button:active {
    transform: translateY(-1px) scale(1.02);
    box-shadow: 0 4px 16px var(--accent-green-opacity-25);
  }

  .fab-button:focus-visible {
    outline: 2px solid var(--accent-green);
    outline-offset: 2px;
  }

  @media (min-width: 640px) {
    .fab-button {
      bottom: 2rem;
      right: 2rem;
      width: 4rem;
      height: 4rem;
    }

    .fab-icon {
      width: 1.75rem;
      height: 1.75rem;
    }
  }

  @media (min-width: 1024px) {
    .fab-button {
      bottom: 2.5rem;
      right: 2.5rem;
    }
  }

  @media (max-height: 600px) {
    .fab-button {
      bottom: 1rem;
      right: 1rem;
      width: 3rem;
      height: 3rem;
    }

    .fab-icon {
      width: 1.25rem;
      height: 1.25rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .fab-button,
    .fab-icon {
      transition: none;
    }

    .fab-button:hover {
      transform: none;
    }

    .fab-button:hover .fab-icon {
      transform: none;
    }
  }

  @media (prefers-contrast: high) {
    .fab-button {
      border-width: 3px;
    }
  }

  @media print {
    .fab-button {
      display: none;
    }
  }

  @media (max-width: 1023px) {
    .fab-button {
      bottom: max(1.5rem, calc(1.5rem + env(safe-area-inset-bottom)));
    }
  }

  @media (max-height: 600px) and (orientation: landscape) {
    .fab-button {
      bottom: 1rem;
      right: 1rem;
      width: 3rem;
      height: 3rem;
    }

    .fab-icon {
      width: 1.25rem;
      height: 1.25rem;
    }
  }

  @media (prefers-contrast: high) {
    .fab-button {
      border-width: 3px;
      box-shadow: 0 6px 24px var(--accent-green-opacity-30);
    }
  }

  @supports (padding: max(0px)) {
    .fab-button {
      bottom: max(1.5rem, calc(1.5rem + env(safe-area-inset-bottom)));
      right: max(1.5rem, calc(1.5rem + env(safe-area-inset-right)));
    }

    @media (max-width: 1023px) {
      .fab-button {
        bottom: max(2rem, calc(1.5rem + 3.5rem + env(safe-area-inset-bottom)));
      }
    }
  }

  body:has(.mobile-menu.is-open) .fab-button {
    opacity: 0;
    pointer-events: none;
    transform: scale(0.8);
  }
</style>

