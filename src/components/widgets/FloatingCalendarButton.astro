---
import { Icon } from "astro-icon/components";
---

<button
  id="floating-calendar-button"
  type="button"
  data-google-calendar-open
  class="floating-calendar-btn"
  aria-label="Schedule a meeting with AUXO Data Labs"
  title="Book an appointment"
>
  <Icon name="mdi:calendar-clock" class="floating-calendar-icon" />
  <span class="sr-only">Schedule a meeting</span>
</button>

<style>
  .floating-calendar-btn {
    position: fixed !important;
    bottom: 1rem !important;
    right: 1rem !important;
    z-index: 9998 !important;
    width: 3.5rem !important;
    height: 3.5rem !important;
    min-width: 3.5rem !important;
    min-height: 3.5rem !important;
    max-width: 3.5rem !important;
    max-height: 3.5rem !important;
    border-radius: 50% !important;
    background-color: var(--accent-green, #7CB342) !important;
    color: #000 !important;
    border: 2px solid rgba(163, 230, 53, 0.3) !important;
    box-shadow: 0 4px 20px rgba(163, 230, 53, 0.4), 0 0 0 3px rgba(163, 230, 53, 0.2) !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    cursor: pointer !important;
    pointer-events: auto !important;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
    backdrop-filter: blur(8px) !important;
    -webkit-backdrop-filter: blur(8px) !important;
    touch-action: manipulation !important;
    padding: 0 !important;
    margin: 0 !important;
    box-sizing: border-box !important;
    user-select: none !important;
    -webkit-user-select: none !important;
    -moz-user-select: none !important;
    -ms-user-select: none !important;
  }

  .floating-calendar-icon {
    width: 1.5rem;
    height: 1.5rem;
    pointer-events: none;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .floating-calendar-btn:hover {
    border-color: rgba(163, 230, 53, 0.5) !important;
    transform: translateY(-4px) scale(1.05) !important;
    box-shadow: 0 8px 32px rgba(163, 230, 53, 0.5), 0 0 0 4px rgba(163, 230, 53, 0.3) !important;
    cursor: pointer !important;
    pointer-events: auto !important;
  }

  .floating-calendar-btn:hover .floating-calendar-icon {
    transform: rotate(12deg);
  }

  .floating-calendar-btn:active {
    transform: translateY(-2px) scale(1.02) !important;
    box-shadow: 0 4px 16px rgba(163, 230, 53, 0.4), 0 0 0 3px rgba(163, 230, 53, 0.25) !important;
    cursor: pointer !important;
    pointer-events: auto !important;
  }

  .floating-calendar-btn:focus-visible {
    outline: 2px solid var(--accent-green, #7CB342) !important;
    outline-offset: 4px !important;
    border-color: rgba(163, 230, 53, 0.6) !important;
    cursor: pointer !important;
    pointer-events: auto !important;
  }

  @media (min-width: 640px) and (max-width: 1023px) {
    .floating-calendar-btn {
      bottom: 1.5rem;
      right: 1.5rem;
      width: 4rem;
      height: 4rem;
      min-width: 4rem;
      min-height: 4rem;
      max-width: 4rem;
      max-height: 4rem;
    }

    .floating-calendar-icon {
      width: 1.75rem;
      height: 1.75rem;
    }
  }

  @media (min-width: 1024px) {
    .floating-calendar-btn {
      bottom: 2rem;
      right: 2rem;
      width: 4rem;
      height: 4rem;
      min-width: 4rem;
      min-height: 4rem;
      max-width: 4rem;
      max-height: 4rem;
    }

    .floating-calendar-icon {
      width: 1.75rem;
      height: 1.75rem;
    }
  }

  @media (max-width: 639px) {
    .floating-calendar-btn {
      bottom: 1rem;
      right: 1rem;
      width: 3.5rem;
      height: 3.5rem;
      min-width: 3.5rem;
      min-height: 3.5rem;
      max-width: 3.5rem;
      max-height: 3.5rem;
    }

    .floating-calendar-icon {
      width: 1.5rem;
      height: 1.5rem;
    }
  }

  @media (max-height: 600px) and (max-width: 1023px) {
    .floating-calendar-btn {
      bottom: 0.75rem;
      right: 0.75rem;
      width: 3rem;
      height: 3rem;
      min-width: 3rem;
      min-height: 3rem;
      max-width: 3rem;
      max-height: 3rem;
    }

    .floating-calendar-icon {
      width: 1.25rem;
      height: 1.25rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .floating-calendar-btn,
    .floating-calendar-icon {
      transition: none;
    }
    
    .floating-calendar-btn:hover {
      transform: none;
    }

    .floating-calendar-btn:hover .floating-calendar-icon {
      transform: none;
    }
  }
</style>
