---
import { Icon } from "astro-icon/components";
---

<button
  id="floating-calendar-button"
  type="button"
  data-google-calendar-open
  class="floating-calendar-btn"
  aria-label="Schedule a meeting with AUXO Data Labs"
  title="Book an appointment"
>
  <Icon name="mdi:calendar-clock" class="floating-calendar-icon" />
  <span class="sr-only">Schedule a meeting</span>
</button>

<script>
  function initFloatingButton() {
    const button = document.getElementById('floating-calendar-button');
    if (!button) return;

    // Force button to be a direct child of body for proper viewport positioning
    if (button.parentElement !== document.body) {
      document.body.appendChild(button);
    }

    // Scroll state tracking
    let lastScrollTop = 0;
    let scrollThreshold = 10;
    let ticking = false;

    // Ensure button is always positioned at bottom right of viewport
    const forceViewportPosition = () => {
      button.style.position = 'fixed';
      button.style.bottom = '1rem';
      button.style.right = '1rem';
      button.style.zIndex = '9999';
    };

    // Handle scroll effects similar to navigation
    const updateScrollState = () => {
      const scrollTop = window.lenis ? window.lenis.scroll : (window.pageYOffset || document.documentElement.scrollTop);
      const shouldBeScrolled = scrollTop > scrollThreshold;

      // Add/remove scrolled class for styling
      button.classList.toggle('floating-btn-scrolled', shouldBeScrolled);

      lastScrollTop = scrollTop;
      ticking = false;
    };

    const handleScroll = () => {
      if (!ticking) {
        requestAnimationFrame(updateScrollState);
        ticking = true;
      }
    };

    // Initialize with forced positioning
    forceViewportPosition();

    // Set up scroll listeners
    if (window.lenis) {
      window.lenis.on('scroll', handleScroll);
    } else {
      window.addEventListener('scroll', handleScroll, { passive: true });
    }

    // Re-apply positioning on resize to ensure it stays in viewport
    window.addEventListener('resize', forceViewportPosition, { passive: true });

    // Also ensure positioning after any dynamic content changes
    const observer = new MutationObserver(() => {
      if (button.parentElement !== document.body) {
        document.body.appendChild(button);
        forceViewportPosition();
      }
    });

    observer.observe(document.body, { childList: true, subtree: true });

    // Initial scroll state
    updateScrollState();
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFloatingButton, { once: true });
  } else {
    initFloatingButton();
  }
</script>

<style>
  .floating-calendar-btn {
    /* Force viewport positioning - overrides all other positioning */
    position: fixed !important;
    bottom: 1rem !important;
    right: 1rem !important;
    z-index: 10000 !important;

    /* Visual styling with !important to override conflicts */
    width: 3.5rem !important;
    height: 3.5rem !important;
    border-radius: 50% !important;
    background-color: var(--accent-green) !important;
    color: var(--text-on-accent) !important;
    border: 2px solid var(--accent-green-opacity-30) !important;
    box-shadow: 0 4px 20px var(--accent-green-opacity-2), 0 0 0 3px var(--accent-green-opacity-1) !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    cursor: pointer !important;
    pointer-events: auto !important;
    transition: all var(--duration-normal) var(--easing-standard) !important;
    backdrop-filter: blur(var(--blur-nav)) !important;
    -webkit-backdrop-filter: blur(var(--blur-nav)) !important;
    touch-action: manipulation !important;
    will-change: transform !important;
    transform: translateZ(0) !important;
    -webkit-transform: translateZ(0) !important;
    transform-origin: center !important;
    padding: 0 !important;
    margin: 0 !important;
    box-sizing: border-box !important;
    user-select: none !important;
    -webkit-user-select: none !important;
    -moz-user-select: none !important;
    -ms-user-select: none !important;
    contain: none !important;
    /* Prevent any parent containment from affecting positioning */
    isolation: isolate !important;

    /* Ensure button is never affected by parent transforms or positioning */
    transform-style: preserve-3d !important;
    backface-visibility: hidden !important;
  }

  .floating-calendar-icon {
    width: 1.5rem;
    height: 1.5rem;
    pointer-events: none;
    transition: transform var(--duration-normal) var(--easing-standard);
  }

  .floating-calendar-btn:hover {
    border-color: var(--accent-green-opacity-30) !important;
    transform: translateY(var(--transform-translate-y-card-hover)) scale(1.05) !important;
    box-shadow: 0 8px 32px var(--accent-green-opacity-30), 0 0 0 4px var(--accent-green-opacity-25) !important;
    cursor: pointer !important;
    pointer-events: auto !important;
  }

  .floating-calendar-btn:hover .floating-calendar-icon {
    transform: rotate(12deg) !important;
  }

  .floating-calendar-btn:active {
    transform: translateY(var(--hover-lift-distance-sm)) scale(1.02) !important;
    box-shadow: 0 4px 16px var(--accent-green-opacity-2), 0 0 0 3px var(--accent-green-opacity-25) !important;
    cursor: pointer !important;
    pointer-events: auto !important;
  }

  .floating-calendar-btn:focus-visible {
    outline: var(--focus-ring-width) solid var(--accent-green) !important;
    outline-offset: var(--spacing-xs) !important;
    border-color: var(--accent-green-opacity-30) !important;
    cursor: pointer !important;
    pointer-events: auto !important;
  }

  /* Tablet styles - maintain consistent viewport positioning */
  @media (min-width: 640px) and (max-width: 1023px) {
    .floating-calendar-btn {
      bottom: 1.5rem !important;
      right: 1.5rem !important;
      width: 4rem !important;
      height: 4rem !important;
    }

    .floating-calendar-icon {
      width: 1.75rem !important;
      height: 1.75rem !important;
    }
  }

  /* Desktop styles - maintain consistent viewport positioning */
  @media (min-width: 1024px) {
    .floating-calendar-btn {
      bottom: 2rem !important;
      right: 2rem !important;
      width: 4rem !important;
      height: 4rem !important;
    }

    .floating-calendar-icon {
      width: 1.75rem !important;
      height: 1.75rem !important;
    }
  }

  /* Mobile styles - maintain consistent viewport positioning */
  @media (max-width: 639px) {
    .floating-calendar-btn {
      bottom: 1rem !important;
      right: 1rem !important;
      width: 3.5rem !important;
      height: 3.5rem !important;
    }

    .floating-calendar-icon {
      width: 1.5rem !important;
      height: 1.5rem !important;
    }
  }

  /* Low height devices - adjust for limited vertical space */
  @media (max-height: 600px) and (max-width: 1023px) {
    .floating-calendar-btn {
      bottom: 0.75rem !important;
      right: 0.75rem !important;
      width: 3rem !important;
      height: 3rem !important;
    }

    .floating-calendar-icon {
      width: 1.25rem !important;
      height: 1.25rem !important;
    }
  }

  /* Scrolled state - similar to navigation behavior */
  .floating-calendar-btn.floating-btn-scrolled {
    box-shadow: 0 8px 32px var(--accent-green-opacity-30), 0 0 0 4px var(--accent-green-opacity-25) !important;
    backdrop-filter: blur(calc(var(--blur-nav) * 1.2)) !important;
    -webkit-backdrop-filter: blur(calc(var(--blur-nav) * 1.2)) !important;
  }

  @media (prefers-reduced-motion: reduce) {
    .floating-calendar-btn,
    .floating-calendar-icon {
      transition: none !important;
    }

    .floating-calendar-btn:hover {
      transform: none !important;
    }

    .floating-calendar-btn:hover .floating-calendar-icon {
      transform: none !important;
    }
  }
</style>

