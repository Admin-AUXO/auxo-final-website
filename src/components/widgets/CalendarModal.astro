<div id="calendar-modal" class="calendar-modal" role="dialog" aria-modal="true" aria-labelledby="calendar-modal-title" hidden>
  <div class="calendar-modal-overlay" data-calendar-overlay></div>
  <div class="calendar-modal-container">
    <div class="calendar-modal-header">
      <h2 id="calendar-modal-title" class="calendar-modal-title">Schedule a Meeting</h2>
      <button
        type="button"
        class="calendar-modal-close"
        aria-label="Close calendar"
        data-calendar-close
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <div class="calendar-modal-content" data-calendar-content>
      <div class="calendar-loading" data-calendar-loading>
        <div class="calendar-loading-spinner"></div>
        <p class="calendar-loading-text">Loading calendar...</p>
      </div>
      <div class="calendar-scroll-indicator calendar-scroll-indicator-top" data-calendar-scroll-top aria-hidden="true"></div>
      <iframe
        id="calendar-iframe"
        src=""
        title="Google Calendar - Schedule a meeting"
        loading="lazy"
        allow="fullscreen"
        referrerpolicy="no-referrer-when-downgrade"
        class="calendar-iframe"
        data-calendar-iframe
      ></iframe>
      <div class="calendar-scroll-indicator calendar-scroll-indicator-bottom" data-calendar-scroll-bottom aria-hidden="true"></div>
    </div>
  </div>
</div>

<style>
  .calendar-modal {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    z-index: 9999 !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .calendar-modal[hidden] {
    display: none !important;
  }

  .calendar-modal:not([hidden]) {
    opacity: 1 !important;
    visibility: visible !important;
  }

  .calendar-modal-overlay {
    position: absolute !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    z-index: 0 !important;
    background: linear-gradient(
      135deg,
      rgba(var(--accent-green-rgb), 0.05) 0%,
      rgba(0, 0, 0, 0.85) 50%,
      rgba(var(--accent-green-rgb), 0.03) 100%
    ) !important;
    backdrop-filter: blur(var(--blur-nav)) !important;
    -webkit-backdrop-filter: blur(var(--blur-nav)) !important;
  }

  .light .calendar-modal-overlay {
    background: linear-gradient(
      135deg,
      rgba(var(--accent-green-rgb), 0.08) 0%,
      rgba(0, 0, 0, 0.75) 50%,
      rgba(var(--accent-green-rgb), 0.05) 100%
    ) !important;
  }

  .calendar-modal-container {
    position: relative !important;
    width: 100% !important;
    height: 100% !important;
    display: flex !important;
    flex-direction: column !important;
    background-color: var(--bg-primary) !important;
    border: 1px solid var(--accent-green-opacity-30) !important;
    box-shadow: 
      0 0 0 1px var(--accent-green-opacity-15),
      0 20px 60px var(--overlay-black-75),
      0 0 40px var(--accent-green-opacity-08) !important;
    z-index: 1 !important;
  }

  .calendar-modal-header {
    display: flex !important;
    align-items: center !important;
    justify-content: space-between !important;
    padding: 1.25rem 1.5rem !important;
    border-bottom: 2px solid var(--accent-green-opacity-30) !important;
    background: linear-gradient(
      135deg,
      var(--bg-primary) 0%,
      rgba(var(--accent-green-rgb), 0.03) 50%,
      var(--bg-primary) 100%
    ) !important;
    flex-shrink: 0 !important;
    position: relative !important;
    z-index: 2 !important;
  }

  .calendar-modal-header::before {
    content: '' !important;
    position: absolute !important;
    bottom: 0 !important;
    left: 0 !important;
    right: 0 !important;
    height: 2px !important;
    z-index: 1 !important;
    background: linear-gradient(
      90deg,
      transparent,
      var(--accent-green),
      transparent
    ) !important;
    opacity: 0.5 !important;
  }

  .calendar-modal-title {
    font-size: 1.25rem !important;
    font-weight: 600 !important;
    color: var(--text-primary) !important;
    margin: 0 !important;
    position: relative !important;
    z-index: 1 !important;
    background: linear-gradient(
      135deg,
      var(--text-primary) 0%,
      var(--accent-green) 100%
    ) !important;
    -webkit-background-clip: text !important;
    -webkit-text-fill-color: transparent !important;
    background-clip: text !important;
    background-size: 200% 200% !important;
    animation: gradient-shift 3s ease infinite !important;
  }

  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .calendar-modal-close {
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    width: 2.5rem !important;
    height: 2.5rem !important;
    padding: 0 !important;
    margin: 0 !important;
    border: 1px solid var(--accent-green-opacity-30) !important;
    background: transparent !important;
    color: var(--text-primary) !important;
    cursor: pointer !important;
    border-radius: var(--radius-md) !important;
    transition: all var(--duration-normal) var(--easing-standard) !important;
    position: relative !important;
    z-index: 2 !important;
    overflow: hidden !important;
  }

  .calendar-modal-close::before {
    content: '' !important;
    position: absolute !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    z-index: 0 !important;
    background: linear-gradient(
      135deg,
      var(--accent-green-opacity-15) 0%,
      var(--accent-green-opacity-08) 100%
    ) !important;
    opacity: 0 !important;
    transition: opacity var(--duration-normal) var(--easing-standard) !important;
  }

  .calendar-modal-close:hover {
    background-color: var(--accent-green-opacity-15) !important;
    border-color: var(--accent-green) !important;
    color: var(--accent-green) !important;
    transform: scale(1.05) !important;
    box-shadow: 0 4px 12px var(--accent-green-opacity-18) !important;
  }

  .calendar-modal-close:hover::before {
    opacity: 1 !important;
  }

  .calendar-modal-close:active {
    transform: scale(0.95) !important;
  }

  .calendar-modal-close:focus-visible {
    outline: 2px solid var(--accent-green) !important;
    outline-offset: 2px !important;
    border-color: var(--accent-green) !important;
    box-shadow: 0 0 0 4px var(--accent-green-opacity-20) !important;
  }

  .calendar-modal-content {
    flex: 1 !important;
    position: relative !important;
    width: 100% !important;
    height: 100% !important;
    overflow: hidden !important;
    z-index: 1 !important;
    -webkit-overflow-scrolling: touch !important;
    scroll-behavior: smooth !important;
  }

  .calendar-loading {
    position: absolute !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    display: flex !important;
    flex-direction: column !important;
    align-items: center !important;
    justify-content: center !important;
    background-color: var(--bg-primary) !important;
    z-index: 2 !important;
    opacity: 1 !important;
    transition: opacity 0.3s ease !important;
  }

  .calendar-loading[hidden] {
    opacity: 0 !important;
    pointer-events: none !important;
  }

  .calendar-loading-spinner {
    width: 48px !important;
    height: 48px !important;
    border: 3px solid var(--accent-green-opacity-20) !important;
    border-top-color: var(--accent-green) !important;
    border-radius: 50% !important;
    animation: calendar-spin 0.8s linear infinite !important;
  }

  @keyframes calendar-spin {
    to { transform: rotate(360deg); }
  }

  .calendar-loading-text {
    margin-top: 1rem !important;
    color: var(--text-secondary) !important;
    font-size: 0.875rem !important;
  }

  .calendar-iframe {
    position: absolute !important;
    top: 0 !important;
    left: 0 !important;
    width: 100% !important;
    height: 100% !important;
    border: none !important;
    background-color: var(--bg-primary) !important;
    z-index: 1 !important;
    -webkit-overflow-scrolling: touch !important;
    scroll-behavior: smooth !important;
    overscroll-behavior: contain !important;
  }

  .calendar-scroll-indicator {
    position: absolute !important;
    left: 0 !important;
    right: 0 !important;
    height: 40px !important;
    pointer-events: none !important;
    z-index: 3 !important;
    opacity: 0 !important;
    transition: opacity 0.2s ease !important;
    background: linear-gradient(
      to bottom,
      var(--bg-primary) 0%,
      transparent 100%
    ) !important;
  }

  .calendar-scroll-indicator-top {
    top: 0 !important;
    background: linear-gradient(
      to bottom,
      var(--bg-primary) 0%,
      transparent 100%
    ) !important;
  }

  .calendar-scroll-indicator-bottom {
    bottom: 0 !important;
    background: linear-gradient(
      to top,
      var(--bg-primary) 0%,
      transparent 100%
    ) !important;
  }

  .calendar-scroll-indicator.visible {
    opacity: 1 !important;
  }

  .calendar-modal-container::after {
    content: '' !important;
    position: absolute !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    pointer-events: none !important;
    z-index: 1 !important;
    background: 
      linear-gradient(90deg, var(--accent-green-opacity-02) 0%, transparent 2%, transparent 98%, var(--accent-green-opacity-02) 100%),
      linear-gradient(0deg, var(--accent-green-opacity-02) 0%, transparent 2%, transparent 98%, var(--accent-green-opacity-02) 100%) !important;
  }

  @media (max-width: 768px) {
    .calendar-modal-container {
      border-radius: 0 !important;
    }

    .calendar-modal-header {
      padding: 1rem 1.25rem !important;
    }

    .calendar-modal-title {
      font-size: 1.125rem !important;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .calendar-modal,
    .calendar-loading,
    .calendar-scroll-indicator {
      transition: none !important;
    }
    
    .calendar-modal-title {
      animation: none !important;
      background: var(--text-primary) !important;
      -webkit-text-fill-color: var(--text-primary) !important;
    }
    
    .calendar-modal-close:hover {
      transform: none !important;
    }

    .calendar-loading-spinner {
      animation: none !important;
    }
  }
</style>

