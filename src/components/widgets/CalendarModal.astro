<div id="calendar-modal" class="calendar-modal" role="dialog" aria-modal="true" aria-labelledby="calendar-modal-title" hidden>
  <div class="calendar-modal-overlay" data-calendar-overlay></div>
  <div class="calendar-modal-container">
    <div class="calendar-modal-header">
      <h2 id="calendar-modal-title" class="calendar-modal-title">Schedule a Meeting</h2>
      <button
        type="button"
        class="calendar-modal-close"
        aria-label="Close calendar"
        data-calendar-close
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <div class="calendar-modal-content" data-calendar-content>
      <div class="calendar-loading" data-calendar-loading>
        <div class="calendar-loading-spinner"></div>
        <p class="calendar-loading-text">Loading calendar...</p>
      </div>
      <div class="calendar-scroll-indicator calendar-scroll-indicator-top" data-calendar-scroll-top aria-hidden="true"></div>
      <iframe
        id="calendar-iframe"
        src=""
        title="Google Calendar - Schedule a meeting"
        loading="lazy"
        allow="fullscreen"
        referrerpolicy="no-referrer-when-downgrade"
        class="calendar-iframe"
        data-calendar-iframe
      ></iframe>
      <div class="calendar-scroll-indicator calendar-scroll-indicator-bottom" data-calendar-scroll-bottom aria-hidden="true"></div>
    </div>
  </div>
</div>

<style>
  .calendar-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: var(--z-calendar-modal);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .calendar-modal[hidden] {
    display: none;
  }

  .calendar-modal:not([hidden]) {
    opacity: 1;
    visibility: visible;
  }

  .calendar-modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
    background: var(--calendar-modal-overlay-bg);
    backdrop-filter: blur(var(--blur-nav));
    -webkit-backdrop-filter: blur(var(--blur-nav));
  }

  .calendar-modal-container {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: var(--bg-primary);
    border: 1px solid var(--accent-green-opacity-30);
    box-shadow:
      0 0 0 1px var(--accent-green-opacity-15),
      0 20px 60px var(--overlay-black-75),
      0 0 40px var(--accent-green-opacity-08);
    z-index: 1;
  }

  .calendar-modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.25rem 1.5rem;
    border-bottom: 2px solid var(--accent-green-opacity-30);
    background: linear-gradient(
      135deg,
      var(--bg-primary) 0%,
      rgba(var(--accent-green-rgb), 0.03) 50%,
      var(--bg-primary) 100%
    );
    flex-shrink: 0;
    position: relative;
    z-index: 2;
  }

  .calendar-modal-header::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    z-index: 1;
    background: linear-gradient(
      90deg,
      transparent,
      var(--accent-green),
      transparent
    );
    opacity: 0.5;
  }

  .calendar-modal-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
    position: relative;
    z-index: 1;
    background: linear-gradient(
      135deg,
      var(--text-primary) 0%,
      var(--accent-green) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% 200%;
    animation: gradient-shift 3s ease infinite;
  }

  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .calendar-modal-close {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    padding: 0;
    margin: 0;
    border: 1px solid var(--accent-green-opacity-30);
    background: transparent;
    color: var(--text-primary);
    cursor: pointer;
    border-radius: var(--radius-md);
    transition: all var(--duration-normal) var(--easing-standard);
    position: relative;
    z-index: 2;
    overflow: hidden;
  }

  .calendar-modal-close::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
    background: linear-gradient(
      135deg,
      var(--accent-green-opacity-15) 0%,
      var(--accent-green-opacity-08) 100%
    );
    opacity: 0;
    transition: opacity var(--duration-normal) var(--easing-standard);
  }

  .calendar-modal-close:hover {
    background-color: var(--accent-green-opacity-15);
    border-color: var(--accent-green);
    color: var(--accent-green);
    transform: scale(1.05);
    box-shadow: 0 4px 12px var(--accent-green-opacity-18);
  }

  .calendar-modal-close:hover::before {
    opacity: 1;
  }

  .calendar-modal-close:active {
    transform: scale(0.95);
  }

  .calendar-modal-close:focus-visible {
    outline: 2px solid var(--accent-green);
    outline-offset: 2px;
    border-color: var(--accent-green);
    box-shadow: 0 0 0 4px var(--accent-green-opacity-20);
  }

  .calendar-modal-content {
    flex: 1;
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
  }

  .calendar-loading {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: var(--bg-primary);
    z-index: 2;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .calendar-loading[hidden] {
    opacity: 0;
    pointer-events: none;
  }

  .calendar-loading-spinner {
    width: 48px;
    height: 48px;
    border: 3px solid var(--accent-green-opacity-20);
    border-top-color: var(--accent-green);
    border-radius: 50%;
    animation: calendar-spin 0.8s linear infinite;
  }

  @keyframes calendar-spin {
    to { transform: rotate(360deg); }
  }

  .calendar-loading-text {
    margin-top: 1rem;
    color: var(--text-secondary);
    font-size: 0.875rem;
  }

  .calendar-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
    background-color: var(--bg-primary);
    z-index: 1;
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
    overscroll-behavior: contain;
  }

  .calendar-scroll-indicator {
    position: absolute;
    left: 0;
    right: 0;
    height: 40px;
    pointer-events: none;
    z-index: 3;
    opacity: 0;
    transition: opacity 0.2s ease;
    background: linear-gradient(
      to bottom,
      var(--bg-primary) 0%,
      transparent 100%
    );
  }

  .calendar-scroll-indicator-top {
    top: 0;
    background: linear-gradient(
      to bottom,
      var(--bg-primary) 0%,
      transparent 100%
    );
  }

  .calendar-scroll-indicator-bottom {
    bottom: 0;
    background: linear-gradient(
      to top,
      var(--bg-primary) 0%,
      transparent 100%
    );
  }

  .calendar-scroll-indicator.visible {
    opacity: 1;
  }

  .calendar-modal-container::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 1;
    background:
      linear-gradient(90deg, var(--accent-green-opacity-02) 0%, transparent 2%, transparent 98%, var(--accent-green-opacity-02) 100%),
      linear-gradient(0deg, var(--accent-green-opacity-02) 0%, transparent 2%, transparent 98%, var(--accent-green-opacity-02) 100%);
  }

  @media (max-width: 768px) {
    .calendar-modal-container {
      border-radius: 0;
    }

    .calendar-modal-header {
      padding: 1rem 1.25rem;
    }

    .calendar-modal-title {
      font-size: 1.125rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .calendar-modal,
    .calendar-loading,
    .calendar-scroll-indicator {
      transition: none;
    }

    .calendar-modal-title {
      animation: none;
      background: var(--text-primary);
      -webkit-text-fill-color: var(--text-primary);
    }

    .calendar-modal-close:hover {
      transform: none;
    }

    .calendar-loading-spinner {
      animation: none;
    }
  }
</style>

