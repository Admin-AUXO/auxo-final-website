<div id="calendar-modal" class="calendar-modal" role="dialog" aria-modal="true" aria-labelledby="calendar-modal-title" hidden>
  <div class="calendar-modal-overlay" data-calendar-overlay></div>
  <div class="calendar-modal-container">
    <div class="calendar-modal-header">
      <h2 id="calendar-modal-title" class="calendar-modal-title">Schedule a Meeting</h2>
      <button
        type="button"
        class="calendar-modal-close"
        aria-label="Close calendar"
        data-calendar-close
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <div class="calendar-modal-content scroll-touch-smooth scroll-hidden" data-calendar-content data-modal-content data-scroll-indicators>
      <div class="calendar-loading" data-calendar-loading>
        <div class="calendar-loading-spinner"></div>
        <p class="calendar-loading-text">Loading calendar...</p>
      </div>
      <div class="calendar-scroll-indicator calendar-scroll-indicator-top scroll-indicator scroll-indicator-top" data-calendar-scroll-top data-scroll-indicator-top aria-hidden="true"></div>
      <iframe
        id="calendar-iframe"
        src=""
        title="Google Calendar - Schedule a meeting"
        loading="lazy"
        allow="fullscreen"
        referrerpolicy="no-referrer-when-downgrade"
        class="calendar-iframe scroll-touch-smooth scroll-hidden"
        data-calendar-iframe
        data-scrollable-iframe
      ></iframe>
      <div class="calendar-scroll-indicator calendar-scroll-indicator-bottom scroll-indicator scroll-indicator-bottom" data-calendar-scroll-bottom data-scroll-indicator-bottom aria-hidden="true"></div>
    </div>
  </div>
</div>

<style>
  .calendar-modal {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    width: 100vw !important;
    height: 100vh !important;
    max-width: 100vw !important;
    max-height: 100vh !important;
    z-index: 2147483647 !important;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    margin: 0 !important;
    padding: 0 !important;
  }

  .calendar-modal[hidden] {
    display: none !important;
  }

  .calendar-modal:not([hidden]) {
    opacity: 1 !important;
    visibility: visible !important;
  }

  .calendar-modal-overlay {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    width: 100vw !important;
    height: 100vh !important;
    z-index: 1 !important;
    background: rgba(0, 0, 0, 0.85) !important;
    backdrop-filter: blur(10px) !important;
    -webkit-backdrop-filter: blur(10px) !important;
  }

  .calendar-modal-container {
    position: relative !important;
    width: 100vw !important;
    height: 100vh !important;
    max-width: 100vw !important;
    max-height: 100vh !important;
    display: flex;
    flex-direction: column;
    background-color: var(--bg-primary);
    border: none;
    box-shadow: 0 0 0 1px var(--accent-green-opacity-15);
    z-index: 10 !important;
    margin: 0 !important;
    padding: 0 !important;
    touch-action: auto;
  }

  .calendar-modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    border-bottom: 2px solid var(--accent-green-opacity-30);
    background: var(--bg-primary);
    flex-shrink: 0;
    position: relative;
    z-index: 2147483647;
    min-height: 60px;
  }

  .calendar-modal-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
    flex: 1;
  }

  .calendar-modal-close {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.75rem;
    height: 2.75rem;
    padding: 0;
    margin: 0;
    margin-left: 1rem;
    border: 2px solid var(--accent-green-opacity-40);
    background: var(--bg-surface);
    color: var(--text-primary);
    cursor: pointer;
    border-radius: var(--radius-lg);
    transition: all var(--duration-fast) var(--easing-standard);
    position: relative;
    z-index: 2147483647;
    overflow: hidden;
    flex-shrink: 0;
    min-width: 2.75rem;
    min-height: 2.75rem;
    touch-action: manipulation;
    pointer-events: auto;
    -webkit-tap-highlight-color: transparent;
  }

  .calendar-modal-close::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
    background: linear-gradient(
      135deg,
      var(--accent-green-opacity-15) 0%,
      var(--accent-green-opacity-08) 100%
    );
    opacity: 0;
    transition: opacity var(--duration-normal) var(--easing-standard);
  }

  .calendar-modal-close svg {
    position: relative;
    z-index: 1;
    flex-shrink: 0;
  }

  .calendar-modal-close:hover {
    background-color: var(--bg-elevated);
    border-color: var(--accent-green);
    color: var(--accent-green);
    transform: scale(1.05);
    box-shadow: 0 4px 16px var(--accent-green-opacity-20);
  }

  .calendar-modal-close:hover::before {
    opacity: 1;
  }

  .calendar-modal-close:active {
    transform: scale(0.95);
    background-color: var(--bg-surface);
  }

  .calendar-modal-close:focus-visible {
    outline: 2px solid var(--accent-green);
    outline-offset: 2px;
    border-color: var(--accent-green);
    box-shadow: 0 0 0 4px var(--accent-green-opacity-20);
  }

  .calendar-modal-content {
    flex: 1;
    position: relative;
    width: 100%;
    height: 100%;
    overflow: auto;
    z-index: 1;
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
    overscroll-behavior: contain;
    touch-action: pan-y;
    -webkit-touch-callout: none;
  }

  .calendar-modal:not([hidden]) {
    touch-action: none;
  }

  /* Allow touch interactions on scrollable content even when modal is visible */
  .calendar-modal:not([hidden]) .calendar-modal-content {
    touch-action: pan-y;
  }

  .calendar-loading {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: var(--bg-primary);
    z-index: 2;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .calendar-loading[hidden] {
    opacity: 0;
    pointer-events: none;
  }

  .calendar-loading-spinner {
    width: 48px;
    height: 48px;
    border: 3px solid var(--accent-green-opacity-20);
    border-top-color: var(--accent-green);
    border-radius: 50%;
    animation: calendar-spin 0.8s linear infinite;
  }

  @keyframes calendar-spin {
    to { transform: rotate(360deg); }
  }

  .calendar-loading-text {
    margin-top: 1rem;
    color: var(--text-secondary);
    font-size: 0.875rem;
  }

  .calendar-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
    background-color: var(--bg-primary);
    z-index: 1;
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
    overscroll-behavior: contain;
    overflow: auto;
    isolation: isolate;
    contain: layout style paint;
    touch-action: pan-y;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    user-select: none;
    max-height: 100%;
    box-sizing: border-box;
  }

  .calendar-iframe iframe {
    touch-action: pan-y;
    -webkit-overflow-scrolling: touch;
    overscroll-behavior: contain;
    max-height: 100%;
  }

  .calendar-scroll-indicator {
    position: absolute;
    left: 0;
    right: 0;
    height: 60px;
    pointer-events: none;
    z-index: 3;
    opacity: 0;
    transition: opacity 0.3s ease, transform 0.3s ease;
    background: linear-gradient(to bottom, var(--bg-primary) 0%, transparent 100%);
    box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.1);
  }

  .calendar-scroll-indicator-top {
    top: 0;
    background: linear-gradient(
      to bottom,
      var(--bg-primary) 0%,
      rgba(var(--accent-green-rgb), 0.02) 50%,
      transparent 100%
    );
    transform: translateY(-10px);
  }

  .calendar-scroll-indicator-bottom {
    bottom: 0;
    background: linear-gradient(
      to top,
      var(--bg-primary) 0%,
      rgba(var(--accent-green-rgb), 0.02) 50%,
      transparent 100%
    );
    transform: translateY(10px);
  }

  .calendar-scroll-indicator.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .calendar-scroll-indicator.visible::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 2px;
    background: var(--accent-green);
    border-radius: 1px;
    opacity: 0.6;
    animation: scroll-indicator-pulse 2s ease-in-out infinite;
  }

  .calendar-scroll-indicator-top.visible::after {
    animation-direction: normal;
  }

  .calendar-scroll-indicator-bottom.visible::after {
    animation-direction: reverse;
  }

  @keyframes scroll-indicator-pulse {
    0%, 100% {
      opacity: 0.3;
      transform: translate(-50%, -50%) scaleX(0.8);
    }
    50% {
      opacity: 0.8;
      transform: translate(-50%, -50%) scaleX(1.2);
    }
  }

  .calendar-modal-container::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 1;
    background:
      linear-gradient(90deg, var(--accent-green-opacity-02) 0%, transparent 2%, transparent 98%, var(--accent-green-opacity-02) 100%),
      linear-gradient(0deg, var(--accent-green-opacity-02) 0%, transparent 2%, transparent 98%, var(--accent-green-opacity-02) 100%);
  }

  @media (max-width: 768px) {
    .calendar-modal {
      align-items: center;
    }

    .calendar-modal-container {
      border-radius: 0;
      width: 100vw !important;
      height: 100vh !important;
      max-width: 100vw !important;
      max-height: 100vh !important;
    }

    .calendar-modal-content {
      height: 100%;
    }

    .calendar-iframe {
      height: 100%;
    }

    .calendar-modal-header {
      padding: 0.875rem 1rem;
      flex-shrink: 0;
      min-height: 56px;
      position: relative;
    }

    .calendar-modal-title {
      font-size: 1rem;
    }

    .calendar-modal-close {
      width: 2.5rem;
      height: 2.5rem;
      min-width: 2.5rem;
      min-height: 2.5rem;
      margin-left: 0.75rem;
      touch-action: manipulation;
      pointer-events: auto;
      -webkit-tap-highlight-color: transparent;
    }

    .calendar-modal-close svg {
      width: 18px;
      height: 18px;
    }

    .calendar-scroll-indicator {
      height: 50px;
    }

    .calendar-scroll-indicator.visible::after {
      width: 16px;
      height: 1.5px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .calendar-modal,
    .calendar-loading,
    .calendar-scroll-indicator,
    .calendar-loading-spinner {
      transition: none;
      animation: none;
    }

    .calendar-modal-close:hover,
    .calendar-modal-close:active {
      transform: none;
    }
  }
</style>

