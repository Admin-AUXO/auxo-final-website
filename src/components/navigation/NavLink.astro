---
interface Props {
  item: {
    name: string;
    href: string;
  };
  isMobile?: boolean;
}

const { item, isMobile = false } = Astro.props;

const MOBILE_LINK_CLASSES = "mobile-nav-link block w-full px-5 py-4 min-h-[52px] text-base font-semibold text-theme-secondary hover:text-theme-primary active:text-theme-primary rounded-xl transition-all duration-normal touch-manipulation flex items-center relative group bg-theme-surface/50 hover:bg-theme-surface border border-accent-green/30 hover:border-accent-green/50";
const DESKTOP_LINK_CLASSES = "nav-link relative px-3 py-2.5 text-sm font-medium text-theme-secondary hover:text-theme-primary transition-all duration-fast rounded-xl hover:bg-theme-surface/50 active:bg-theme-surface min-h-[44px] flex items-center group border border-transparent hover:border-accent-green/30";
const ACTIVE_BG = "absolute inset-0 opacity-0 transition-opacity duration-fast pointer-events-none group-hover:opacity-100";
---

{isMobile ? (
  <a href={item.href} class={MOBILE_LINK_CLASSES} data-nav-item={item.name.toLowerCase()}>
    <span class="relative z-10">{item.name}</span>
    <span class={`mobile-nav-active-bg ${ACTIVE_BG} bg-accent-green/10 rounded-lg`}></span>
    <span class={`mobile-nav-active-border ${ACTIVE_BG} rounded-lg border border-accent-green/30`}></span>
    {item.name.toLowerCase() === 'about' && (
      <span class="absolute inset-0 rounded-lg border-2 border-accent-green/30 pointer-events-none z-0 about-border-overlay"></span>
    )}
  </a>
) : (
  <a href={item.href} class={DESKTOP_LINK_CLASSES} data-nav-item={item.name.toLowerCase()}>
    <span class="relative z-10">{item.name}</span>
    <span class={`nav-active-bg ${ACTIVE_BG} bg-accent-green/5 rounded-lg`}></span>
  </a>
)}


