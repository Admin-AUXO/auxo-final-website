---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SectionContainer from "./SectionContainer.astro";
import SectionHeader from "@/components/ui/SectionHeader.astro";
import BackgroundDecorations from "@/components/ui/BackgroundDecorations.astro";
import { Icon } from "astro-icon/components";
import { createUrl } from "@/utils/url";

export interface Props {
  title: string;
  description?: string;
  lastUpdated?: string;
}

const {
  title,
  description,
  lastUpdated = "January 7, 2026",
} = Astro.props;

const LEGAL_PAGES = [
  { href: createUrl("legal/privacy-policy"), label: "Privacy Policy", icon: "mdi:shield-lock", path: "legal/privacy-policy" },
  { href: createUrl("legal/terms"), label: "Terms of Service", icon: "mdi:file-document", path: "legal/terms" },
  { href: createUrl("legal/cookie-policy"), label: "Cookie Policy", icon: "mdi:cookie", path: "legal/cookie-policy" },
] as const;

const currentPath = Astro.url.pathname.replace(/^\//, '').replace(/\/$/, '');
const relatedPages = LEGAL_PAGES.filter(page => !currentPath.includes(page.path));
---

<BaseLayout
  title={`${title} | AUXO Data Labs`}
  description={description || `${title} for AUXO Data Labs`}
>
  <SectionContainer
    id="legal-section"
    padding="lg"
    background="surface"
    class="relative min-h-[85vh]"
  >
    <BackgroundDecorations gradients={["hero"]} />
    
    <div class="grid-container relative z-10">
      <div class="col-span-full max-w-5xl mx-auto">
        <div class="mb-8 sm:mb-12">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-theme-primary mb-4 font-display">
            {title}
          </h1>
          {description && (
            <p class="text-base sm:text-lg text-theme-secondary font-body max-w-3xl">
              {description}
            </p>
          )}
        </div>

        <div class="flex items-center gap-2 mb-8 sm:mb-10 text-sm text-theme-secondary font-body bg-theme-card/60 backdrop-blur-sm border border-accent-green/20 rounded-xl px-4 py-3 w-fit">
          <Icon name="mdi:calendar-outline" class="w-4 h-4 text-accent-green flex-shrink-0" />
          <span>Last updated: <strong class="text-theme-primary font-semibold">{lastUpdated}</strong></span>
        </div>

        <div class="lg:hidden mb-8">
          <button
            id="mobile-toc-toggle"
            class="w-full flex items-center justify-between gap-3 p-4 bg-theme-card/80 backdrop-blur-sm border-2 border-accent-green/20 rounded-xl hover:border-accent-green/40 transition-all duration-200 group"
            aria-expanded="false"
            aria-controls="mobile-table-of-contents"
          >
            <div class="flex items-center gap-2">
              <Icon name="mdi:format-list-bulleted" class="w-5 h-5 text-accent-green" />
              <span class="text-sm font-semibold text-theme-primary font-body">Table of Contents</span>
            </div>
            <Icon name="mdi:chevron-down" class="w-5 h-5 text-accent-green transition-transform duration-200 group-aria-expanded:rotate-180" />
          </button>
          <div
            id="mobile-table-of-contents"
            class="hidden mt-3 bg-theme-card/80 backdrop-blur-sm border-2 border-accent-green/20 rounded-xl p-4"
          >
            <nav id="table-of-contents-mobile" class="space-y-2 text-sm">
            </nav>
          </div>
        </div>

        <div class="grid lg:grid-cols-[240px_1fr] gap-8 lg:gap-12">
          <aside class="hidden lg:block">
            <div class="sticky top-28">
              <div class="bg-theme-card/80 backdrop-blur-sm border-2 border-accent-green/20 rounded-2xl p-5 shadow-lg hover:border-accent-green/30 transition-colors duration-300">
                <h3 class="text-base font-bold text-theme-primary mb-4 font-display flex items-center gap-2">
                  <Icon name="mdi:format-list-bulleted" class="w-5 h-5 text-accent-green" />
                  Contents
                </h3>
                <nav id="table-of-contents" class="space-y-1.5 text-sm">
                </nav>
              </div>
            </div>
          </aside>

          <div class="min-w-0">
            <article class="legal-page bg-theme-card/60 backdrop-blur-sm border-2 border-accent-green/20 rounded-2xl p-6 sm:p-8 lg:p-10 shadow-xl hover:border-accent-green/30 transition-colors duration-300">
              <div class="legal-content">
                <slot />
              </div>
            </article>

            <div class="mt-10 sm:mt-12 pt-8 border-t border-accent-green/20">
              <h3 class="text-lg font-bold text-theme-primary mb-6 font-display flex items-center gap-2">
                <Icon name="mdi:file-document-multiple" class="w-5 h-5 text-accent-green" />
                Related Legal Documents
              </h3>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                {relatedPages.map((page) => (
                  <a
                    href={page.href}
                    class="flex items-center gap-3 p-4 rounded-xl bg-accent-green/5 border border-accent-green/20 hover:bg-accent-green/10 hover:border-accent-green/40 hover:shadow-lg hover:shadow-accent-green/10 transition-all duration-200 group"
                  >
                    <Icon
                      name={page.icon}
                      class="w-5 h-5 text-accent-green flex-shrink-0 group-hover:scale-110 transition-transform"
                    />
                    <span class="text-sm font-semibold text-theme-primary group-hover:text-accent-green transition-colors font-body">
                      {page.label}
                    </span>
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </SectionContainer>
</BaseLayout>

<script>
  import { initTableOfContents } from "@/scripts/legal/toc";
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTableOfContents, { once: true });
  } else {
    initTableOfContents();
  }
</script>
