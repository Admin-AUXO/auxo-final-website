---
import { Icon } from "astro-icon/components";
import SectionContainer from "@/components/layouts/SectionContainer.astro";
import SectionHeader from "@/components/ui/SectionHeader.astro";
import Card from "@/components/ui/Card.astro";
import BackgroundDecorations from "@/components/ui/BackgroundDecorations.astro";

interface Props {
  content: {
    title: string;
    description: string;
    descriptionHighlight?: string | string[];
    nameOrigin: {
      title: string;
      description: string;
      descriptionHighlight?: string | string[];
    };
  };
}

const { content } = Astro.props;
---

<SectionContainer
  id="purpose"
  padding="normal"
  background="card"
  class="relative purpose-section section-divider overflow-hidden"
>
  <BackgroundDecorations gradients={["center"]} patterns={["mesh"]} />

  <div class="grid-container relative z-10">
    <div class="col-span-full max-w-5xl mx-auto w-full">
      <SectionHeader
        title={content.title}
        subtitle={content.description}
        highlight="AUXO"
        subtitleHighlight={content.descriptionHighlight}
      />

      <div class="name-origin-card" data-reveal="fade-up" data-reveal-delay="50" data-reveal-duration="200" data-reveal-easing="ease-out">
        <Card
          variant="highlight"
          title={content.nameOrigin.title}
          content={content.nameOrigin.description}
          icon="mdi:lightbulb-on"
          accentTitle={true}
        />
      </div>
    </div>
  </div>
</SectionContainer>


