---
import { Icon } from "astro-icon/components";
import Button from "../../ui/Button.astro";
import SectionContainer from "../../layouts/SectionContainer.astro";
import HighlightText from "../../ui/HighlightText.astro";
import { aboutContent } from "../../../data/content/about";
import { createUrl } from "../../../utils/url";

const content = aboutContent.cta;
---

<SectionContainer
  id="about-cta"
  padding="normal"
  background="default"
  class="relative about-cta-section"
>
  <div class="section-cta-pattern absolute inset-0 pointer-events-none z-0"></div>
  <div class="section-cta-gradient absolute inset-0 pointer-events-none z-0"></div>
  
  <div class="grid-container relative z-10">
    <div class="col-span-full max-w-4xl mx-auto w-full text-center">
      <div class="about-cta-content opacity-0 fade-in-up">
        <h2 class="text-h2 font-extrabold mb-4 sm:mb-5 lg:mb-6 text-theme-primary leading-tight tracking-tight font-display px-2">
          <HighlightText text={content.title} highlight="partnership" />
        </h2>
        <p class="text-body-lg sm:text-body-xl text-theme-secondary leading-relaxed mb-8 sm:mb-10 lg:mb-12 max-w-2xl mx-auto font-body px-4 sm:px-6">
          {content.description}
        </p>
        <div class="flex flex-col sm:flex-row items-stretch sm:items-center justify-center gap-2 sm:gap-3 w-full sm:w-auto px-4 sm:px-0">
          <Button
            variant="primary"
            size="lg"
            href={createUrl(content.ctaHref)}
            class="w-full sm:w-auto font-bold shadow-lg shadow-accent-green/20 justify-center hover:shadow-xl hover:shadow-accent-green/30 hover:-translate-y-0.5 transition-all min-h-[44px] cta-button flex-nowrap"
          >
            <span class="whitespace-nowrap">{content.ctaText}</span>
            <Icon name="mdi:arrow-right" class="w-4 h-4 flex-shrink-0" />
          </Button>
        </div>
      </div>
    </div>
  </div>
</SectionContainer>

