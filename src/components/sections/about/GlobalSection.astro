---
import { Icon } from "astro-icon/components";
import SectionContainer from "../../layouts/SectionContainer.astro";
import BackgroundDecorations from "../../ui/BackgroundDecorations.astro";
import Carousel from "../../ui/Carousel.astro";
import { aboutContent } from "../../../data/content/about";

const content = aboutContent.global;
const metrics = [
  { 
    icon: "mdi:map-marker-outline", 
    label: "Dubai", 
    sublabel: "Base",
    description: "Headquartered in the heart of the Middle East"
  },
  { 
    icon: "mdi:web", 
    label: "Global", 
    sublabel: "Reach",
    description: "Supporting clients across regions and time zones"
  },
  { 
    icon: "mdi:clock-outline", 
    label: "Flexible", 
    sublabel: "Engagements",
    description: "Remote, hybrid, or on-siteâ€”as needed"
  },
];
---

<SectionContainer
  id="global"
  padding="normal"
  background="elevated"
  class="relative global-section section-divider"
>
  <BackgroundDecorations gradients={["dual"]} patterns={["mesh"]} />
  
  <div class="grid-container relative z-10">
    <div class="col-span-full max-w-6xl mx-auto w-full">
      <div class="text-center mb-10 sm:mb-12 lg:mb-16 xl:mb-20 opacity-0 fade-in-up">
        <div class="inline-flex items-center justify-center gap-3 sm:gap-4 mb-4 sm:mb-6">
          <div class="relative">
            <div class="absolute inset-0 bg-accent-green/20 rounded-full blur-2xl animate-pulse"></div>
            <Icon name="mdi:earth" class="w-10 h-10 sm:w-12 sm:h-12 text-accent-green relative z-10" />
          </div>
          <h2 class="text-h2 font-extrabold text-theme-primary leading-tight tracking-tight font-display">
            <span class="block sm:inline">Global <span class="text-accent-green">Mindset</span>,</span>
            <span class="block sm:inline sm:ml-0 ml-0"><span class="text-accent-green">Local</span> Context.</span>
          </h2>
        </div>
      </div>

      <div class="global-content opacity-0 fade-in-up-delay">
        <div class="hidden lg:grid lg:grid-cols-12 lg:gap-8 xl:gap-10 mb-8 lg:mb-12">
          <div class="lg:col-span-5 flex flex-col gap-4 sm:gap-6">
            {metrics.map((metric, index) => (
              <div
                class="global-metric-card group relative overflow-hidden bg-theme-card border border-theme-light rounded-xl p-5 sm:p-6 transition-all duration-300 hover:border-accent-green/50 hover:shadow-xl hover:shadow-accent-green/10 hover:-translate-y-1"
                style={`animation-delay: ${0.2 + index * 0.15}s`}
              >
                <div class="absolute top-0 right-0 w-32 h-32 bg-accent-green/5 rounded-full blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <div class="relative z-10">
                  <div class="flex items-start gap-4 mb-3">
                    <div class="flex-shrink-0">
                      <div class="w-14 h-14 bg-accent-green/10 border-2 border-accent-green/20 rounded-xl flex items-center justify-center group-hover:bg-accent-green/20 group-hover:border-accent-green/40 transition-all duration-300">
                        <Icon name={metric.icon} class="w-7 h-7 text-accent-green" />
                      </div>
                    </div>
                    <div class="flex-1 min-w-0">
                      <div class="flex items-baseline gap-2 mb-1">
                        <p class="text-xl sm:text-2xl font-bold text-theme-primary font-display">{metric.label}</p>
                        <span class="text-xs uppercase tracking-wider text-accent-green font-semibold font-body">{metric.sublabel}</span>
                      </div>
                      <p class="text-sm text-theme-secondary leading-relaxed font-body">{metric.description}</p>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>

          <div class="lg:col-span-7 flex items-stretch">
            <div class="w-full bg-theme-card border border-theme-light rounded-xl p-6 sm:p-8 lg:p-10 relative overflow-hidden group hover:border-accent-green/30 transition-all duration-300">
              <div class="absolute inset-0 bg-gradient-to-br from-accent-green/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              <div class="relative z-10 flex flex-col justify-center h-full">
                <div class="flex items-center gap-3 mb-4">
                  <div class="w-1 h-8 bg-accent-green rounded-full"></div>
                  <h3 class="text-h4 font-bold text-theme-primary font-display">Our Approach</h3>
                </div>
                <p class="text-body-lg sm:text-body-xl text-theme-secondary leading-relaxed font-body">
                  {content.description}
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="hidden md:grid lg:hidden md:grid-cols-2 md:gap-6 mb-8">
          <div class="md:col-span-2 grid md:grid-cols-3 gap-4 mb-6">
            {metrics.map((metric, index) => (
              <div
                class="global-metric-card group relative overflow-hidden bg-theme-card border border-theme-light rounded-xl p-5 transition-all duration-300 hover:border-accent-green/40 hover:shadow-lg hover:shadow-accent-green/10"
                style={`animation-delay: ${0.2 + index * 0.1}s`}
              >
                <div class="absolute top-0 right-0 w-20 h-20 bg-accent-green/5 rounded-full blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <div class="relative z-10 flex flex-col items-center text-center">
                  <div class="mb-3">
                    <div class="w-12 h-12 bg-accent-green/10 border-2 border-accent-green/20 rounded-lg flex items-center justify-center group-hover:bg-accent-green/20 group-hover:border-accent-green/40 transition-all duration-300">
                      <Icon name={metric.icon} class="w-6 h-6 text-accent-green" />
                    </div>
                  </div>
                  <p class="text-lg font-bold text-theme-primary font-display mb-1">{metric.label}</p>
                  <p class="text-xs text-theme-secondary font-body">{metric.sublabel}</p>
                </div>
              </div>
            ))}
          </div>
          <div class="md:col-span-2">
            <div class="bg-theme-card border border-theme-light rounded-xl p-6 sm:p-8 relative overflow-hidden group hover:border-accent-green/30 transition-all duration-300">
              <div class="absolute inset-0 bg-gradient-to-br from-accent-green/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              <div class="relative z-10">
                <div class="flex items-center gap-3 mb-4">
                  <div class="w-1 h-8 bg-accent-green rounded-full"></div>
                  <h3 class="text-h4 font-bold text-theme-primary font-display">Our Approach</h3>
                </div>
                <p class="text-body-lg text-theme-secondary leading-relaxed font-body">
                  {content.description}
                </p>
              </div>
            </div>
          </div>
        </div>

        <Carousel
          containerId="global-metrics-carousel-container"
          trackId="global-metrics-carousel-track"
          dotSelector=".global-metrics-carousel-dot"
          items={metrics}
          wrapperClass="md:hidden global-metrics-carousel global-metrics-carousel-wrapper mb-6"
          dotsClass="global-metrics-carousel-dots"
          dotClass="global-metrics-carousel-dot"
          dotsMarginTop="mt-4"
          breakpoint={768}
          activateOnDesktop={false}
        >
          {metrics.map((metric, index) => (
            <div class="carousel-slide embla__slide flex-shrink-0" data-index={index}>
              <div class="global-metric-card group relative overflow-hidden bg-theme-card border border-theme-light rounded-xl p-6 transition-all duration-300 h-full">
                <div class="absolute top-0 right-0 w-24 h-24 bg-accent-green/5 rounded-full blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <div class="relative z-10 flex flex-col h-full">
                  <div class="flex items-center gap-4 mb-4">
                    <div class="w-12 h-12 bg-accent-green/10 border-2 border-accent-green/20 rounded-lg flex items-center justify-center group-hover:bg-accent-green/20 group-hover:border-accent-green/40 transition-all duration-300">
                      <Icon name={metric.icon} class="w-6 h-6 text-accent-green" />
                    </div>
                    <div>
                      <p class="text-xl font-bold text-theme-primary font-display">{metric.label}</p>
                      <p class="text-xs uppercase tracking-wider text-accent-green font-semibold font-body">{metric.sublabel}</p>
                    </div>
                  </div>
                  <p class="text-sm text-theme-secondary leading-relaxed font-body">{metric.description}</p>
                </div>
              </div>
            </div>
          ))}
        </Carousel>

        <div class="md:hidden">
          <div class="bg-theme-card border border-theme-light rounded-xl p-6 relative overflow-hidden group hover:border-accent-green/30 transition-all duration-300">
            <div class="absolute inset-0 bg-gradient-to-br from-accent-green/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative z-10">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-1 h-8 bg-accent-green rounded-full"></div>
                <h3 class="text-h4 font-bold text-theme-primary font-display">Our Approach</h3>
              </div>
              <p class="text-body-base text-theme-secondary leading-relaxed font-body">
                {content.description}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</SectionContainer>

<script>
  import { initGlobalMetricsCarousel } from "../../../scripts/sections/about/globalSection";
  initGlobalMetricsCarousel();
</script>

