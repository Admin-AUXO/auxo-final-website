---
import { Icon } from "astro-icon/components";
import SectionContainer from "@/components/layouts/SectionContainer.astro";
import Card from "@/components/ui/Card.astro";
import HighlightText from "@/components/ui/HighlightText.astro";

interface Props {
  content: {
    title: string;
    description: string;
    descriptionHighlight?: string | string[];
  };
}

const { content } = Astro.props;
---

<SectionContainer
  id="partnership"
  padding="normal"
  background="card"
  class="relative partnership-section overflow-hidden"
>
  <div class="partnership-pattern absolute inset-0 pointer-events-none z-0"></div>
  <div class="partnership-gradient absolute inset-0 pointer-events-none z-0"></div>
  
  <div class="grid-container relative z-10">
    <div class="col-span-full max-w-5xl mx-auto w-full">
      <div class="text-center mb-8 sm:mb-10 lg:mb-12 xl:mb-16" data-reveal="fade-down" data-reveal-duration="250" data-reveal-easing="ease-out">
        <div class="inline-flex items-center justify-center gap-3 mb-4 sm:mb-6">
          <Icon name="mdi:handshake" class="w-8 h-8 sm:w-10 sm:h-10 text-accent-green" />
          <h2 class="text-h2 font-extrabold text-theme-primary leading-tight tracking-tight font-display">
            <HighlightText text={content.title} highlight="Partner" />
          </h2>
        </div>
      </div>

      <div class="partnership-content" data-reveal="fade-up" data-reveal-delay="150" data-reveal-duration="250" data-reveal-easing="ease-out">
        <Card
          variant="highlight"
          content={content.description}
          contentHighlight={content.descriptionHighlight}
        />
      </div>
    </div>
  </div>
</SectionContainer>

