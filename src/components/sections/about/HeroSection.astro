---
import { Icon } from "astro-icon/components";
import Button from "@/components/ui/Button.astro";
import HighlightText from "@/components/ui/HighlightText.astro";
import HeroLayout from "@/components/ui/HeroLayout.astro";
import { createUrl } from "@/utils/url";
import { shouldOpenCalendly } from "@/utils/ctaRules";

interface Props {
  content: {
    headline: string;
    description: string;
    ctaText: string;
    ctaHref: string;
  };
}

const { content } = Astro.props;
const headlineParts = content.headline.split(" ");
const bridgePart = headlineParts.slice(0, 2).join(" ");
const leftPart = headlineParts.slice(2, 4).join(" ");
const middlePart = headlineParts[4];
const rightPart = headlineParts.slice(5).join(" ");
const shouldOpenCalendlyBtn = shouldOpenCalendly({
  text: content.ctaText,
  href: content.ctaHref,
  context: 'hero'
});
---

<HeroLayout
  id="about-hero"
  scrollHref="#mission-vision"
  scrollText="Learn More"
  scrollAriaLabel="Scroll to learn more"
>
  <Fragment slot="background">
    <div class="section-gradient-hero absolute inset-0 pointer-events-none z-0"></div>

    <div class="section-hero-accent-lines absolute inset-0 pointer-events-none z-0 overflow-hidden">
      <div class="section-hero-line section-hero-line-1 absolute top-1/4 left-0 w-full h-px bg-gradient-to-r from-transparent via-accent-green/20 to-transparent" data-reveal="fade-right" data-reveal-delay="150" data-reveal-duration="250" data-reveal-easing="ease-out"></div>
      <div class="section-hero-line section-hero-line-2 absolute top-3/4 right-0 w-full h-px bg-gradient-to-l from-transparent via-accent-green/15 to-transparent" data-reveal="fade-left" data-reveal-delay="250" data-reveal-duration="250" data-reveal-easing="ease-out"></div>
    </div>
  </Fragment>

  <div class="about-hero-headline mb-6 sm:mb-8 lg:mb-10 w-full" data-reveal="fade-down" data-reveal-duration="250" data-reveal-easing="ease-out">
    <h1 class="text-h1 font-extrabold leading-tight tracking-tight text-theme-primary transition-colors mb-3 sm:mb-4 lg:mb-5 w-full font-display">
      <span class="block bridge-intro" data-reveal="fade-up" data-reveal-delay="50" data-reveal-duration="250" data-reveal-easing="ease-out">{bridgePart}</span>

      <div class="block mt-2 sm:mt-3 lg:mt-4 bridge-content-wrapper relative">
        <span class="inline-block bridge-left" data-reveal="fade-right" data-reveal-delay="100" data-reveal-duration="250" data-reveal-easing="ease-out">
          {leftPart}
        </span>

        <span class="inline-block mx-2 sm:mx-3 lg:mx-4 text-accent-green bridge-middle" data-reveal="zoom-in" data-reveal-delay="150" data-reveal-duration="250" data-reveal-easing="ease-out">
          {middlePart}
        </span>

        <span class="inline-block bridge-right relative" data-reveal="fade-left" data-reveal-delay="200" data-reveal-duration="250" data-reveal-easing="ease-out">
          {rightPart}
        </span>

        <span class="absolute -bottom-1 left-0 h-0.5 bg-accent-green/30 rounded-full about-hero-bridge-line" data-reveal="fade-right" data-reveal-delay="300" data-reveal-duration="250" data-reveal-easing="ease-out"></span>
      </div>
    </h1>
  </div>

  <div class="about-hero-description mb-8 sm:mb-10 lg:mb-12 max-w-[500px] sm:max-w-[600px] lg:max-w-[700px] mx-auto about-hero-follow-content hero-follow-content" data-reveal="fade-up" data-reveal-delay="250" data-reveal-duration="250" data-reveal-easing="ease-out">
    <p class="text-body-lg sm:text-body-xl text-theme-secondary leading-relaxed transition-colors font-normal opacity-80 font-body">
      <HighlightText text={content.description} highlight="AUXO" highlightClass="text-accent-green font-semibold relative" />
    </p>
  </div>

  <div class="about-hero-follow-content hero-follow-content" data-reveal="fade-up" data-reveal-delay="350" data-reveal-duration="250" data-reveal-easing="ease-out">
    <div class="hero-cta-container">
      <Button
        variant="primary"
        size="lg"
        href={shouldOpenCalendlyBtn ? undefined : createUrl(content.ctaHref)}
        googleCalendar={shouldOpenCalendlyBtn}
        class="hero-cta-button group/btn"
      >
        <span class="whitespace-nowrap">{shouldOpenCalendlyBtn ? "Schedule a Meeting" : content.ctaText}</span>
        <Icon name="mdi:arrow-right" class="w-4 h-4 flex-shrink-0 group-hover/btn:translate-x-1 transition-transform duration-300" />
      </Button>
    </div>
  </div>
</HeroLayout>


