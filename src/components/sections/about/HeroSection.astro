---
import { Icon } from "astro-icon/components";
import Button from "../../ui/Button.astro";
import HighlightText from "../../ui/HighlightText.astro";
import HeroLayout from "../../ui/HeroLayout.astro";
import { aboutContent } from "../../../data/content/about";
import { createUrl } from "../../../utils/url";

const content = aboutContent.hero;
const headlineParts = content.headline.split(" ");
const bridgePart = headlineParts.slice(0, 2).join(" ");
const leftPart = headlineParts.slice(2, 4).join(" ");
const middlePart = headlineParts[4];
const rightPart = headlineParts.slice(5).join(" ");
---

<HeroLayout
  id="about-hero"
  scrollHref="#code"
  scrollText="Learn More"
  scrollAriaLabel="Scroll to learn more"
>
  <Fragment slot="background">
    <div class="section-gradient-hero absolute inset-0 pointer-events-none z-0"></div>

    <div class="section-hero-accent-lines absolute inset-0 pointer-events-none z-0 overflow-hidden">
      <div class="section-hero-line section-hero-line-1 absolute top-1/4 left-0 w-full h-px bg-gradient-to-r from-transparent via-accent-green/20 to-transparent" data-aos="fade-right" data-aos-delay="200" data-aos-duration="600"></div>
      <div class="section-hero-line section-hero-line-2 absolute top-3/4 right-0 w-full h-px bg-gradient-to-l from-transparent via-accent-green/15 to-transparent" data-aos="fade-left" data-aos-delay="300" data-aos-duration="600"></div>
    </div>
  </Fragment>

  <div class="about-hero-headline mb-6 sm:mb-8 lg:mb-10 w-full" data-aos="fade-down" data-aos-duration="500">
    <h1 class="text-h1 font-extrabold leading-tight tracking-tight text-theme-primary transition-colors mb-3 sm:mb-4 lg:mb-5 w-full font-display">
      <span class="block bridge-intro" data-aos="zoom-in" data-aos-delay="50" data-aos-duration="400">{bridgePart}</span>

      <div class="block mt-2 sm:mt-3 lg:mt-4 bridge-content-wrapper relative">
        <span class="inline-block bridge-left" data-aos="fade-right" data-aos-delay="100" data-aos-duration="400">
          {leftPart}
        </span>

        <span class="inline-block mx-2 sm:mx-3 lg:mx-4 text-accent-green bridge-middle" data-aos="zoom-in" data-aos-delay="150" data-aos-duration="400">
          {middlePart}
        </span>

        <span class="inline-block bridge-right relative" data-aos="fade-left" data-aos-delay="200" data-aos-duration="400">
          {rightPart}
        </span>

        <span class="absolute -bottom-1 left-0 h-0.5 bg-accent-green/30 rounded-full about-hero-bridge-line" data-aos="fade-right" data-aos-delay="250" data-aos-duration="500" data-aos-anchor-placement="top-bottom"></span>
      </div>
    </h1>
  </div>

  <div class="about-hero-description mb-8 sm:mb-10 lg:mb-12 max-w-[500px] sm:max-w-[600px] lg:max-w-[700px] mx-auto about-hero-follow-content hero-follow-content" data-aos="fade-up" data-aos-delay="150" data-aos-duration="400">
    <p class="text-body-lg sm:text-body-xl text-theme-secondary leading-relaxed transition-colors font-normal opacity-80 font-body">
      <HighlightText text={content.description} highlight="AUXO" highlightClass="text-accent-green font-semibold relative" />
    </p>
  </div>

  <div class="about-hero-follow-content hero-follow-content" data-aos="fade-up" data-aos-delay="250" data-aos-duration="400">
    <div class="hero-cta-container">
      <Button
        variant="primary"
        size="lg"
        href={createUrl(content.ctaHref)}
        class="hero-cta-button group/btn"
      >
        <span class="whitespace-nowrap">{content.ctaText}</span>
        <Icon name="mdi:arrow-right" class="w-4 h-4 flex-shrink-0 group-hover/btn:translate-x-1 transition-transform duration-300" />
      </Button>
    </div>
  </div>
</HeroLayout>

