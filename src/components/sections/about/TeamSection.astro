---
import { Icon } from "astro-icon/components";
import SectionContainer from "../../layouts/SectionContainer.astro";
import HighlightText from "../../ui/HighlightText.astro";
import { aboutContent } from "../../../data/content/about";

const content = aboutContent.team;
---

<SectionContainer
  id="team"
  padding="normal"
  background="default"
  class="relative team-section overflow-hidden"
>
  <div class="team-accent-bars absolute inset-0 pointer-events-none z-0"></div>
  <div class="team-gradient absolute inset-0 pointer-events-none z-0"></div>
  
  <div class="grid-container relative z-10">
    <div class="col-span-full max-w-6xl mx-auto w-full">
      <div class="text-center mb-10 sm:mb-12 lg:mb-16 xl:mb-20" data-aos="fade-down">
        <div class="inline-flex items-center justify-center gap-3 mb-4 sm:mb-6">
          <Icon name="mdi:account-group" class="w-8 h-8 sm:w-10 sm:h-10 text-accent-green" />
          <h2 class="text-h2 font-extrabold text-theme-primary leading-tight tracking-tight font-display">
            <HighlightText text={content.title} highlight="AUXO" highlightClass="text-accent-green font-black" />
          </h2>
        </div>
        <p class="text-base sm:text-body-lg lg:text-body-xl text-theme-secondary leading-relaxed max-w-3xl mx-auto font-body px-4 sm:px-6">
          <HighlightText text={content.description} highlight={["consultants", "data engineers", "data scientists"]} highlightClass="text-accent-green font-bold" />
        </p>
      </div>

      {content.leadership.length > 0 && (
        <div class="mb-12 sm:mb-16">
          <h3 class="text-h3 font-bold text-theme-primary mb-6 sm:mb-8 text-center font-display" data-aos="fade-up" data-aos-delay="100">
            Leadership
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
            {content.leadership.map((member, index) => (
              <div
                class="team-member-card"
                data-aos="fade-up"
                data-aos-delay={100 + (index * 50)}
              >
                <div class="bg-theme-surface border border-theme-light rounded-xl p-6 sm:p-8 h-full hover:border-accent-green/30 transition-all duration-300">
                  <h4 class="text-xl font-bold text-theme-primary mb-2 font-display">
                    {member.name}
                  </h4>
                  <p class="text-accent-green font-semibold mb-4 text-sm sm:text-base font-body">
                    {member.role}
                  </p>
                  <p class="text-body-base text-theme-secondary leading-relaxed font-body">
                    {member.bio}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>
      )}

      {content.advisors.length > 0 && (
        <div>
          <h3 class="text-h3 font-bold text-theme-primary mb-6 sm:mb-8 text-center font-display" data-aos="fade-up" data-aos-delay="100">
            Advisors
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
            {content.advisors.map((advisor, index) => (
              <div
                class="team-member-card"
                data-aos="fade-up"
                data-aos-delay={100 + (index * 50)}
              >
                <div class="bg-theme-surface border border-theme-light rounded-xl p-6 sm:p-8 h-full hover:border-accent-green/30 transition-all duration-300">
                  <h4 class="text-xl font-bold text-theme-primary mb-2 font-display">
                    {advisor.name}
                  </h4>
                  <p class="text-accent-green font-semibold mb-4 text-sm sm:text-base font-body">
                    {advisor.role}
                  </p>
                  <p class="text-body-base text-theme-secondary leading-relaxed font-body">
                    {advisor.bio}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>
      )}

      {content.leadership.length === 0 && content.advisors.length === 0 && (
        <div class="text-center py-12 sm:py-16" data-aos="fade-up" data-aos-delay="100" data-aos-duration="400">
          <p class="text-body-lg text-theme-secondary font-body">
            Leadership bios and advisor information coming soon.
          </p>
        </div>
      )}
    </div>
  </div>
</SectionContainer>

