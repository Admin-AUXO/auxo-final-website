---
import { Icon } from "astro-icon/components";
import SectionContainer from "../../layouts/SectionContainer.astro";
import BackgroundDecorations from "../../ui/BackgroundDecorations.astro";
import SectionHeader from "../../ui/SectionHeader.astro";
import HighlightText from "../../ui/HighlightText.astro";
import Carousel from "../../ui/Carousel.astro";
import { servicesContent } from "../../../data/content/services";

const content = servicesContent.impact;
---

<SectionContainer
  id="impact"
  padding="normal"
  background="card"
  class="relative impact-section section-divider"
>
  <BackgroundDecorations gradients={["center"]} patterns={["mesh"]} />
  
  <div class="grid-container relative z-10">
    <div class="col-span-full max-w-7xl mx-auto w-full">
      <SectionHeader
        title={content.title}
        subtitle={content.description}
        highlight="We Serve"
        icon="mdi:target"
        titleClass="text-h2 sm:text-h1"
        subtitleClass="text-body-md sm:text-body-lg"
      />

      <div class="mb-8 sm:mb-10 lg:mb-12 opacity-0 fade-in-up-delay">
        <Carousel
          containerId="impact-carousel-container"
          trackId="impact-carousel-track"
          dotSelector=".impact-carousel-dot"
          items={content.industries}
          wrapperClass="impact-carousel-wrapper"
          containerClass="impact-carousel-container"
          trackClass="impact-carousel-track"
          dotsClass="impact-carousel-dots"
          dotClass="impact-carousel-dot"
          alwaysVisible={true}
        >
          {content.industries.map((industry, index) => (
            <div class="carousel-slide embla__slide flex-shrink-0" data-index={index}>
              <div class="impact-industry-card">
                <div class="impact-industry-card-header">
                  <div class="impact-industry-icon">
                    <Icon name={industry.icon} class="w-6 h-6 sm:w-7 sm:h-7 lg:w-8 lg:h-8 text-accent-green" />
                  </div>
                  <h3 class="impact-industry-title">{industry.name}</h3>
                </div>
                
                <p class="impact-industry-description">
                  {industry.descriptionHighlight ? (
                    <HighlightText text={industry.description} highlight={industry.descriptionHighlight} />
                  ) : (
                    industry.description
                  )}
                </p>
                
                <div class="impact-industry-benefit">
                  <Icon name="mdi:trending-up" class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green flex-shrink-0" />
                  <span class="impact-industry-benefit-text">{industry.keyBenefit}</span>
                </div>
              
                <div class="impact-industry-use-cases">
                  <p class="impact-industry-section-label">Key Use Cases</p>
                  <div class="impact-industry-use-cases-grid">
                    {industry.useCases.map((useCase) => (
                      <div class="impact-industry-use-case-item">
                        <Icon name="mdi:check-circle" class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-accent-green flex-shrink-0" />
                        <span class="impact-industry-use-case-text">{useCase}</span>
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          ))}
        </Carousel>
      </div>

      <div class="opacity-0 fade-in-up-delay-2">
        <div class="impact-goal-card">
          <Icon name="mdi:lightbulb" class="impact-goal-icon" />
          <p class="impact-goal-text">
            {content.goal}
            </p>
        </div>
      </div>
    </div>
  </div>
</SectionContainer>

<script>
  import { initImpactSection } from "../../../scripts/sections/services/impactCarousel";
  initImpactSection();
</script>
