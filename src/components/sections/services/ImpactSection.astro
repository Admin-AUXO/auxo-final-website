---
import { Icon } from "astro-icon/components";
import SectionContainer from "@/components/layouts/SectionContainer.astro";
import BackgroundDecorations from "@/components/ui/BackgroundDecorations.astro";
import SectionHeader from "@/components/ui/SectionHeader.astro";
import HighlightText from "@/components/ui/HighlightText.astro";
import Carousel from "@/components/ui/Carousel.astro";

interface Props {
  content: {
    title: string;
    description: string;
    descriptionHighlight?: string | string[];
    industries: {
      name: string;
      description: string;
      descriptionHighlight?: string | string[];
      icon: string;
      keyBenefit: string;
      keyBenefitHighlight?: string | string[];
    }[];
    goal: string;
    goalHighlight?: string | string[];
  };
}

const { content } = Astro.props;
---

<SectionContainer
  id="impact"
  padding="normal"
  background="card"
  class="relative impact-section section-divider overflow-hidden"
>
  <BackgroundDecorations gradients={["center"]} patterns={["mesh"]} />
  
  <div class="grid-container relative z-10">
    <div class="col-span-full max-w-[1400px] mx-auto w-full">
      <SectionHeader
        title={content.title}
        subtitle={content.description}
        highlight="Serve"
        icon="mdi:bullseye"
      />

      <div
        class="mb-8 sm:mb-10 lg:mb-12 impact-carousel-section"
        data-reveal="fade-up"
        data-reveal-delay="50"
        data-reveal-duration="200"
        data-reveal-easing="ease-out"
      >
        <Carousel
          containerId="impact-carousel-container"
          trackId="impact-carousel-track"
          items={content.industries}
          wrapperClass="impact-carousel-wrapper"
          containerClass="impact-carousel-container"
          trackClass="impact-carousel-track"
          alwaysVisible={true}
        >
          {content.industries.map((industry, index) => (
            <div class="carousel-slide embla__slide" data-index={index}>
              <div class="impact-industry-card">
                <div class="impact-industry-card-header flex items-center justify-between">
                  <h3 class="impact-industry-title">{industry.name}</h3>
                  <div class="impact-industry-icon ml-3">
                    <Icon name={industry.icon} class="w-6 h-6 sm:w-7 sm:h-7 text-accent-green" />
                  </div>
                </div>

                <p class="impact-industry-description">
                  {industry.descriptionHighlight ? (
                    <HighlightText text={industry.description} highlight={industry.descriptionHighlight} />
                  ) : (
                    industry.description
                  )}
                </p>

                <div class="impact-industry-benefit">
                  <Icon name="mdi:trending-up" class="w-4 h-4 sm:w-5 sm:h-5 text-accent-green flex-shrink-0" />
                  <span class="impact-industry-benefit-text">{industry.keyBenefit}</span>
                </div>
              </div>
            </div>
          ))}
        </Carousel>
      </div>

      <div
        data-reveal="fade-up"
        data-reveal-delay="50"
        data-reveal-duration="200"
        data-reveal-easing="ease-out"
      >
        <div class="impact-goal-card">
          <Icon name="mdi:lightbulb" class="impact-goal-icon" />
          <p class="impact-goal-text">
            {content.goal}
            </p>
        </div>
      </div>
    </div>
  </div>
</SectionContainer>

<script>
  import { autoInitCarousels } from "@/scripts/sections/autoInit";
  autoInitCarousels();
  
  function randomizeIndustries() {
    const carouselTrack = document.getElementById('impact-carousel-track');
    const carouselContainer = document.getElementById('impact-carousel-container');

    if (!carouselTrack || !carouselContainer) return;

    const slides = Array.from(carouselTrack.children) as HTMLElement[];
    if (slides.length === 0) return;

    const emblaInstance = (window as any).emblaInstances?.get('impact-carousel-container');
    const currentIndex = emblaInstance?.embla ? emblaInstance.embla.selectedScrollSnap() : 0;
    for (let i = slides.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [slides[i], slides[j]] = [slides[j], slides[i]];
    }

    slides.forEach((slide, index) => {
      carouselTrack.appendChild(slide);
      slide.setAttribute('data-index', index.toString());
    });

    setTimeout(() => {
      if (emblaInstance?.embla) {
        emblaInstance.embla.reInit();
        const newIndex = Math.min(currentIndex, slides.length - 1);
        emblaInstance.embla.scrollTo(newIndex);
      } else {
        window.dispatchEvent(new Event('resize', { bubbles: true }));
      }
    }, 100);
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => setTimeout(randomizeIndustries, 500));
  } else {
    setTimeout(randomizeIndustries, 500);
  }
</script>
