---
import { Icon } from "astro-icon/components";
import Button from "../../ui/Button.astro";
import SectionContainer from "../../layouts/SectionContainer.astro";
import HighlightText from "../../ui/HighlightText.astro";
import { servicesContent } from "../../../data/content/services";
import { createUrl } from "../../../utils/url";

const content = servicesContent.cta;
---

<SectionContainer
  id="services-cta"
  padding="normal"
  background="default"
  class="relative services-cta-section"
>
  <div class="section-cta-pattern absolute inset-0 pointer-events-none z-0"></div>
  <div class="section-cta-gradient absolute inset-0 pointer-events-none z-0"></div>
  
  <div class="grid-container relative z-10">
    <div class="col-span-full max-w-4xl mx-auto w-full text-center">
      <div class="services-cta-content opacity-0 fade-in-up">
        <h2 class="text-h2 font-extrabold mb-4 sm:mb-6 leading-tight tracking-tight font-display px-2">
          <HighlightText text={content.title} highlight={["Analytics Roadmap", "Reality"]} />
        </h2>
        <p class="text-body-lg sm:text-body-xl text-theme-secondary leading-relaxed mb-8 sm:mb-10 lg:mb-12 max-w-3xl mx-auto font-body px-4 sm:px-6">
          <HighlightText text={content.description} highlight={["Ready", "start"]} highlightClass="text-accent-green font-semibold" />
        </p>
        <div class="flex flex-col sm:flex-row items-stretch sm:items-center justify-center gap-3 sm:gap-4">
          <Button
            variant="primary"
            size="lg"
            href={createUrl(content.ctaHref)}
            class="w-full sm:w-auto font-bold shadow-lg shadow-accent-green/20 justify-center hover:shadow-xl hover:shadow-accent-green/30 hover:-translate-y-0.5 transition-all min-h-[44px] cta-button flex-nowrap group/btn"
          >
            <span class="whitespace-nowrap">{content.ctaText}</span>
            <Icon name="mdi:arrow-right" class="w-4 h-4 flex-shrink-0 group-hover/btn:translate-x-1 transition-transform duration-300" />
          </Button>
        </div>
      </div>
    </div>
  </div>
</SectionContainer>

