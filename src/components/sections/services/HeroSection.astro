---
import { Icon } from "astro-icon/components";
import Button from "@/components/ui/Button.astro";
import HighlightText from "@/components/ui/HighlightText.astro";
import HeroLayout from "@/components/ui/HeroLayout.astro";
import BackgroundDecorations from "@/components/ui/BackgroundDecorations.astro";
import { createUrl } from "@/utils/url";
import { shouldOpenCalendly } from "@/utils/ctaRules";

interface Props {
  content: {
    headlineLine1: string;
    headlineLine2: string;
    description: string;
    descriptionHighlight?: string | string[];
    ctaText?: string;
    ctaHref?: string;
  };
}

const { content } = Astro.props;
const shouldOpenCalendlyBtn = content.ctaText ? shouldOpenCalendly({
  text: content.ctaText,
  href: content.ctaHref,
  context: 'hero'
}) : false;
---

<HeroLayout
  id="services-hero"
  scrollHref="#services-stages"
  scrollText="Explore Services"
  scrollAriaLabel="Scroll to explore services"
>
  <Fragment slot="background">
    <BackgroundDecorations gradients={["hero"]} />

    <div class="section-hero-accent-lines absolute inset-0 pointer-events-none z-0 overflow-hidden">
      <div class="section-hero-line section-hero-line-1 absolute top-1/4 left-0 w-full h-px bg-gradient-to-r from-transparent via-accent-green/20 to-transparent" data-reveal="fade-right" data-reveal-delay="0" data-reveal-duration="200" data-reveal-easing="ease-out"></div>
      <div class="section-hero-line section-hero-line-2 absolute top-3/4 right-0 w-full h-px bg-gradient-to-l from-transparent via-accent-green/15 to-transparent" data-reveal="fade-left" data-reveal-delay="50" data-reveal-duration="200" data-reveal-easing="ease-out"></div>
    </div>
  </Fragment>

  <div class="services-hero-headline mb-6 sm:mb-8 lg:mb-10 w-full">
    <h1
      class="text-h1 font-extrabold leading-tight tracking-tight text-theme-primary transition-colors mb-3 sm:mb-4 lg:mb-5 w-full font-display"
      data-reveal="fade-down"
      data-reveal-duration="200"
      data-reveal-easing="ease-out"
    >
      <span class="block services-hero-intro-text" data-reveal="fade-right" data-reveal-delay="0" data-reveal-duration="200" data-reveal-easing="ease-out">
        <HighlightText text={content.headlineLine1} highlight="Analytics" />
      </span>

      <span class="block mt-2 sm:mt-3 lg:mt-4 services-hero-impact-wrapper relative">
        <span class="inline-block services-hero-impact-text relative" data-reveal="fade-left" data-reveal-delay="40" data-reveal-duration="200" data-reveal-easing="ease-out">
          <HighlightText text={content.headlineLine2} highlight="impact" />
        </span>
      </span>
    </h1>
  </div>

  <div
    class="services-hero-description mb-8 sm:mb-10 lg:mb-12 max-w-[500px] sm:max-w-[600px] lg:max-w-[700px] mx-auto services-hero-follow-content hero-follow-content"
    data-reveal="fade-up"
    data-reveal-delay="50"
    data-reveal-duration="200"
    data-reveal-easing="ease-out"
  >
    <p class="text-body-lg sm:text-body-xl text-theme-secondary leading-relaxed transition-colors font-normal opacity-80 font-body">
      {content.description}
    </p>
  </div>

  {content.ctaText && content.ctaHref && (
    <div
      class="services-hero-follow-content hero-follow-content"
      data-reveal="fade-up"
      data-reveal-delay="100"
      data-reveal-duration="200"
      data-reveal-easing="ease-out"
    >
      <div class="hero-cta-container">
        <Button
          variant="primary"
          size="lg"
          href={shouldOpenCalendlyBtn ? undefined : createUrl(content.ctaHref)}
          googleCalendar={shouldOpenCalendlyBtn}
          class="hero-cta-button group/btn"
        >
          <span class="whitespace-nowrap">{shouldOpenCalendlyBtn ? "Schedule a Consultation" : content.ctaText}</span>
          <Icon name="mdi:arrow-right" class="w-4 h-4 flex-shrink-0 group-hover/btn:translate-x-1 transition-transform duration-300" />
        </Button>
      </div>
    </div>
  )}
</HeroLayout>


