---
import { Icon } from "astro-icon/components";
import SectionContainer from "@/components/layouts/SectionContainer.astro";
import SectionHeader from "@/components/ui/SectionHeader.astro";
import HighlightText from "@/components/ui/HighlightText.astro";
import BackgroundDecorations from "@/components/ui/BackgroundDecorations.astro";
import type { ServiceDetail } from "@/data/content/services";

interface Props {
  service: ServiceDetail;
}

const { service } = Astro.props;
---

<SectionContainer
  id="service-overview"
  padding="normal"
  background="elevated"
  class="relative service-overview-section section-divider"
>
  <BackgroundDecorations gradients={["dual"]} patterns={["grid"]} />

  <div class="grid-container relative z-10">
    <div class="col-span-full max-w-6xl mx-auto">
      <div data-reveal="fade-down" data-reveal-duration="200" data-reveal-easing="ease-out">
        <SectionHeader
          title={service.overview.title}
          subtitle={service.overview.description}
          subtitleHighlight={service.overview.descriptionHighlight}
        />
      </div>

      <div class="hidden lg:grid lg:grid-cols-2 gap-6 lg:gap-8 xl:gap-10">
        <div
          class="bg-theme-card border-2 border-red-500/20 rounded-2xl p-6 lg:p-8"
          data-reveal="fade-right"
          data-reveal-delay="50"
          data-reveal-duration="200"
          data-reveal-easing="ease-out"
        >
          <div class="flex items-center gap-3 pb-6 mb-6 border-b-2 border-red-500/10">
            <div class="w-12 h-12 bg-red-500/15 rounded-xl flex items-center justify-center flex-shrink-0">
              <Icon name="mdi:close" class="w-6 h-6 text-red-500" />
            </div>
            <h3 class="text-h4 font-bold text-theme-primary font-display">Challenges We Solve</h3>
          </div>

          <div class="space-y-4">
            {service.overview.challenges.map((challenge, index) => (
              <div class="flex items-start gap-3 p-4 bg-red-500/5 border border-red-500/15 rounded-xl lg:hover:border-red-500/30 transition-colors duration-300">
                <div class="w-7 h-7 bg-red-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <span class="text-sm font-bold text-red-500 font-display">{index + 1}</span>
                </div>
                <p class="text-body-base text-theme-secondary leading-relaxed font-body">
                  {challenge}
                </p>
              </div>
            ))}
          </div>
        </div>

        <div
          class="bg-theme-card border-2 border-accent-green/20 rounded-2xl p-6 lg:p-8"
          data-reveal="fade-left"
          data-reveal-delay="50"
          data-reveal-duration="200"
          data-reveal-easing="ease-out"
        >
          <div class="flex items-center gap-3 pb-6 mb-6 border-b-2 border-accent-green/10">
            <div class="w-12 h-12 bg-accent-green/15 rounded-xl flex items-center justify-center flex-shrink-0">
              <Icon name="mdi:check-circle" class="w-6 h-6 text-accent-green" />
            </div>
            <h3 class="text-h4 font-bold text-theme-primary font-display">Our Solutions</h3>
          </div>

          <div class="space-y-4">
            {service.overview.solutions.map((solution, index) => (
              <div class="flex items-start gap-3 p-4 bg-accent-green/5 border border-accent-green/15 rounded-xl lg:hover:border-accent-green/30 transition-colors duration-300">
                <div class="w-7 h-7 bg-accent-green/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <span class="text-sm font-bold text-accent-green font-display">{index + 1}</span>
                </div>
                <p class="text-body-base text-theme-secondary leading-relaxed font-body">
                  {solution}
                </p>
              </div>
            ))}
          </div>
        </div>
      </div>

      <div class="lg:hidden space-y-3">
        <details class="service-accordion-item bg-theme-card border border-red-500/20 rounded-xl overflow-hidden group" open>
          <summary class="service-accordion-summary flex items-center justify-between gap-3 p-4">
            <div class="flex items-center gap-3 flex-1 min-w-0 pointer-events-none">
              <div class="w-10 h-10 bg-red-500/15 rounded-xl flex items-center justify-center flex-shrink-0">
                <Icon name="mdi:close" class="w-5 h-5 text-red-500" />
              </div>
              <h3 class="text-base font-bold text-theme-primary font-display truncate">Challenges We Solve</h3>
            </div>
            <div class="service-accordion-indicator flex-shrink-0 w-6 h-6 rounded-full bg-red-500/10 flex items-center justify-center pointer-events-none">
              <Icon name="mdi:chevron-down" class="w-4 h-4 text-red-500 transition-transform duration-300 group-open:rotate-180" />
            </div>
          </summary>

          <div class="service-accordion-content">
            <div class="px-4 pb-4 space-y-3">
              {service.overview.challenges.map((challenge, index) => (
                <div class="flex items-start gap-3 p-3 bg-red-500/5 border border-red-500/15 rounded-xl">
                  <div class="w-6 h-6 bg-red-500/15 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5">
                    <span class="text-xs font-bold text-red-500 font-display">{index + 1}</span>
                  </div>
                  <p class="text-sm text-theme-secondary leading-relaxed font-body flex-1">
                    {challenge}
                  </p>
                </div>
              ))}
            </div>
          </div>
        </details>

        <details class="service-accordion-item bg-theme-card border border-accent-green/20 rounded-xl overflow-hidden group">
          <summary class="service-accordion-summary flex items-center justify-between gap-3 p-4">
            <div class="flex items-center gap-3 flex-1 min-w-0 pointer-events-none">
              <div class="w-10 h-10 bg-accent-green/15 rounded-xl flex items-center justify-center flex-shrink-0">
                <Icon name="mdi:check-circle" class="w-5 h-5 text-accent-green" />
              </div>
              <h3 class="text-base font-bold text-theme-primary font-display truncate">Our Solutions</h3>
            </div>
            <div class="service-accordion-indicator flex-shrink-0 w-6 h-6 rounded-full bg-accent-green/10 flex items-center justify-center pointer-events-none">
              <Icon name="mdi:chevron-down" class="w-4 h-4 text-accent-green transition-transform duration-300 group-open:rotate-180" />
            </div>
          </summary>

          <div class="service-accordion-content">
            <div class="px-4 pb-4 space-y-3">
              {service.overview.solutions.map((solution, index) => (
                <div class="flex items-start gap-3 p-3 bg-accent-green/5 border border-accent-green/15 rounded-xl">
                  <div class="w-6 h-6 bg-accent-green/15 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5">
                    <span class="text-xs font-bold text-accent-green font-display">{index + 1}</span>
                  </div>
                  <p class="text-sm text-theme-secondary leading-relaxed font-body flex-1">
                    {solution}
                  </p>
                </div>
              ))}
            </div>
          </div>
        </details>
      </div>
    </div>
  </div>
</SectionContainer>
