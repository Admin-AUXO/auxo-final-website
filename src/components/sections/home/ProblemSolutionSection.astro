---
import type { HomepageContent } from '@/data/content/homepage';
import SectionContainer from '@/components/layouts/SectionContainer.astro';
import ParticleBackground from '@/components/effects/ParticleBackground.astro';

interface Props {
  content: HomepageContent["problem"];
}

const { content: problemContent } = Astro.props;
---

<SectionContainer
  id="problem-solution"
  padding="lg"
  class="relative flex items-center overflow-hidden transition-colors problem-solution-section"
>
  <ParticleBackground />

  <div class="absolute inset-0 pointer-events-none opacity-30" aria-hidden="true">
    <div class="absolute top-0 left-1/4 w-px h-full bg-gradient-to-b from-transparent via-accent-green/20 to-transparent"></div>
    <div class="absolute top-0 right-1/4 w-px h-full bg-gradient-to-b from-transparent via-accent-green/20 to-transparent"></div>
  </div>

  <div class="grid-container relative z-10">
    <div class="col-span-full max-w-7xl mx-auto w-full">
      <div class="text-center py-16 sm:py-20 lg:py-28 xl:py-32 px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
          <div
            class="problem-statement-card relative backdrop-blur-sm bg-gradient-to-br from-accent-green/5 via-transparent to-accent-purple/5 rounded-3xl border border-accent-green/10 p-8 sm:p-12 lg:p-16 xl:p-20 shadow-2xl mb-10 sm:mb-14 lg:mb-20"
            data-reveal="fade-down"
            data-reveal-duration="200"
            data-reveal-easing="ease-out"
            data-reveal-delay="0"
          >
            <div class="absolute -top-3 left-1/2 -translate-x-1/2 w-20 h-1 bg-gradient-to-r from-transparent via-accent-green to-transparent" aria-hidden="true"></div>
            <div class="absolute -bottom-3 left-1/2 -translate-x-1/2 w-20 h-1 bg-gradient-to-r from-transparent via-accent-green to-transparent" aria-hidden="true"></div>

            <div class="space-y-6 sm:space-y-8 relative">
              <h2 class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold leading-tight text-theme-primary transition-colors font-display relative inline-block">
                Most companies collect data.
              </h2>
              <div class="relative">
                <p class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold leading-tight bg-gradient-to-r from-accent-green via-accent-purple to-accent-green bg-clip-text text-transparent transition-colors font-display bg-[length:200%_100%] animate-gradient">
                  Few convert it into decisions.
                </p>
              </div>
            </div>
          </div>

          <div
            class="flex items-center justify-center gap-3 mb-10 sm:mb-14 lg:mb-20"
            data-reveal="fade"
            data-reveal-duration="200"
            data-reveal-easing="ease-out"
            data-reveal-delay="50"
            aria-hidden="true"
          >
            <div class="w-12 sm:w-16 lg:w-20 h-px bg-gradient-to-r from-transparent to-accent-green/50"></div>
            <div class="flex gap-2">
              <div class="w-2 h-2 rounded-full bg-accent-green/60 animate-pulse"></div>
              <div class="w-2 h-2 rounded-full bg-accent-purple/60 animate-pulse" style="animation-delay: 0.2s;"></div>
              <div class="w-2 h-2 rounded-full bg-accent-blue/60 animate-pulse" style="animation-delay: 0.4s;"></div>
            </div>
            <div class="w-12 sm:w-16 lg:w-20 h-px bg-gradient-to-l from-transparent to-accent-green/50"></div>
          </div>

          <div
            class="solution-statement relative"
            data-reveal="fade-up"
            data-reveal-duration="200"
            data-reveal-easing="ease-out"
            data-reveal-delay="100"
          >
            <div class="relative inline-block">
              <div class="absolute -inset-4 bg-gradient-to-r from-accent-green/10 via-accent-purple/10 to-accent-green/10 rounded-2xl blur-xl" aria-hidden="true"></div>
              <div class="relative space-y-5 sm:space-y-7">
                <p class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold leading-tight text-theme-primary transition-colors font-display">
                  <span class="highlight-gradient inline-block relative">AUXO</span> <span class="text-theme-primary/90">bridges the gap</span>
                </p>
                <p class="text-xl sm:text-2xl lg:text-3xl font-medium leading-relaxed text-theme-secondary/70 transition-colors max-w-4xl mx-auto font-body">
                  connecting business understanding with data intelligence.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</SectionContainer>

<style>
.problem-solution-section {
  min-height: 70vh;
  display: flex;
  align-items: center;
}

@media (max-width: 767px) {
  .problem-solution-section {
    min-height: 60vh;
  }

  .problem-statement-card {
    backdrop-filter: blur(8px);
  }
}

.problem-statement-card::before {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: inherit;
  padding: 1px;
  background: linear-gradient(135deg, var(--accent-green), transparent, var(--accent-purple));
  -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
  opacity: 0.3;
  pointer-events: none;
}

.solution-statement {
  position: relative;
}
</style>


