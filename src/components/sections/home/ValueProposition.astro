---
import type { HomepageContent } from "../../../data/content/homepage";
import SectionContainer from "../../layouts/SectionContainer.astro";

interface Props {
  content: HomepageContent["problem"];
}

const { content: problemContent } = Astro.props;
---

<SectionContainer
  id="value-proposition"
  padding="normal"
  background="surface"
  class="relative flex items-center overflow-hidden transition-colors value-proposition-section section-divider-bottom"
>
  <div class="section-gradient-hero absolute inset-0 pointer-events-none z-0"></div>
  
  <div class="grid-container relative z-10">
    <div
      class="col-span-full text-center max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8"
    >
      <div
        id="value-proposition-typing"
        class="hero-typing-text space-y-6 sm:space-y-8 lg:space-y-10"
        data-aos="fade-up"
        data-aos-duration="800"
        data-aos-easing="ease-out-cubic"
        data-aos-delay="100"
      >
      </div>
    </div>
  </div>
</SectionContainer>

<script>
  import { initValuePropositionTyping } from "../../../scripts/sections/home/valuePropositionTyping.js";
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      initValuePropositionTyping('value-proposition-typing');
    });
  } else {
    initValuePropositionTyping('value-proposition-typing');
  }
</script>

