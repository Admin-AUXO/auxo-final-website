---
import type { HomepageContent } from "../../../data/content/homepage";
import SectionContainer from "../../layouts/SectionContainer.astro";
import BackgroundDecorations from "../../ui/BackgroundDecorations.astro";

interface Props {
  content: HomepageContent["problem"];
}

const { content: problemContent } = Astro.props;
---

<SectionContainer
  id="value-proposition"
  padding="lg"
  background="surface"
  class="relative flex items-center overflow-hidden transition-colors value-proposition-section section-divider min-h-auto md:min-h-[60vh] lg:min-h-[70vh]"
>
  <BackgroundDecorations gradients={["hero", "center"]} patterns={["grid"]} />
  
  <div class="grid-container relative z-10">
    <div class="col-span-full max-w-7xl mx-auto w-full">
      <div
        class="text-center py-6 sm:py-10 lg:py-14 xl:py-16 px-4 sm:px-6 lg:px-8"
        data-aos="fade-up"
        data-aos-duration="800"
        data-aos-easing="ease-out-cubic"
        data-aos-delay="100"
      >
        <div
          id="value-proposition-typing"
          class="hero-typing-text space-y-6 sm:space-y-8 lg:space-y-10 max-w-5xl mx-auto"
        >
        </div>
      </div>
    </div>
  </div>
</SectionContainer>

<script>
  import { initValuePropositionTyping, cleanupValuePropositionTyping } from "../../../scripts/sections/home/valuePropositionTyping";
  
  const init = () => initValuePropositionTyping('value-proposition-typing');
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init, { once: true });
  } else {
    init();
  }
  
  document.addEventListener('astro:before-swap', cleanupValuePropositionTyping);
</script>

