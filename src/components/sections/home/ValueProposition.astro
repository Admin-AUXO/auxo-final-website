---
import {
  homepageContent,
  type HomepageContent,
} from "../../../data/content/homepage";
import SectionContainer from "../../layouts/SectionContainer.astro";

const problemContent: HomepageContent["problem"] = homepageContent.problem;
---

<SectionContainer
  id="value-proposition"
  padding="normal"
  background="surface"
  class="relative flex items-center overflow-hidden transition-colors value-proposition-section section-divider-bottom"
>
  <div class="section-gradient-hero absolute inset-0 pointer-events-none z-0"></div>
  
  <div class="grid-container relative z-10">
    <div
      class="col-span-full text-center max-w-6xl mx-auto w-full"
    >
      <div
        id="value-proposition-typing"
        class="hero-typing-text space-y-5 sm:space-y-6 lg:space-y-8 xl:space-y-10 mb-10 sm:mb-12 lg:mb-16 xl:mb-20"
        data-aos="fade-up"
        data-aos-duration="600"
      >
        <!-- Content will be populated by typing animation script -->
      </div>

      <div class="underline-animation" data-aos="fade-up" data-aos-delay="500">
        <div class="underline-line"></div>
      </div>
    </div>
  </div>
</SectionContainer>

<script>
  import { initValuePropositionTyping } from "../../../scripts/sections/home/valuePropositionTyping";
  
  // Initialize typing animation when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      initValuePropositionTyping('value-proposition-typing');
    });
  } else {
    initValuePropositionTyping('value-proposition-typing');
  }
</script>

