---
import { Icon } from "astro-icon/components";
import Logo from "./Logo.astro";
import FooterContactInfo from "./FooterContactInfo.astro";
import FooterSocialLinks from "./FooterSocialLinks.astro";
import { getFooterContent } from "../../lib/sanity/data";
import { getBaseUrl, createUrl } from "../../utils/url";

const base = getBaseUrl();
const currentYear = new Date().getFullYear();
const privacyUrl = createUrl("legal/privacy-policy");

const { sections } = await getFooterContent();
const footerSections = sections.map(({ _key, ...section }) => ({
  ...section,
  links: section.links.map(({ _key: linkKey, ...link }) => link),
}));
---

<footer
  class="bg-theme-card border-t-2 border-theme relative z-content transition-colors duration-normal"
>
  <div class="grid-container py-4 sm:py-8 lg:py-10">
    <div class="col-span-full sm:hidden space-y-5">
      <nav class="space-y-3">
        {footerSections.map((section) => (
          <details class="group">
            <summary
              class="flex items-center justify-between text-sm font-semibold text-theme-primary cursor-pointer list-none min-h-[44px] touch-manipulation"
            >
              <span class="flex items-center gap-2">
                <Icon name={section.icon} class="w-5 h-5 text-accent-green" />
                {section.title}
              </span>
              <Icon
                name="mdi:chevron-down"
                class="w-5 h-5 text-accent-green transition-transform group-open:rotate-180"
              />
            </summary>
            <ul class="mt-2 space-y-2 pl-7">
              {section.links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm text-theme-secondary hover:text-accent-green transition-colors min-h-[44px] flex items-center"
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </details>
        ))}
      </nav>

      <FooterSocialLinks size="sm" class="pt-2" />
    </div>

    <div class="hidden sm:grid sm:grid-cols-12 lg:grid-cols-12 gap-6 lg:gap-10 col-span-full">
      <section class="sm:col-span-12 lg:col-span-5 space-y-4 sm:space-y-6">
        <Logo size="lg" showText={true} href={base} class="items-start" />

        <div class="space-y-4">
          <FooterContactInfo />
        </div>

        <FooterSocialLinks size="lg" class="pt-2" />
      </section>

      <section class="sm:col-span-12 lg:col-span-7 mt-0 mb-0 sm:mt-0 sm:mb-auto">
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
          {footerSections.map((section) => (
            <div class="space-y-3 sm:space-y-4">
              <h4
                class="text-sm font-extrabold tracking-wide text-theme-primary uppercase transition-colors flex items-center gap-2 mb-4 font-display"
              >
                <Icon name={section.icon} class="w-5 h-5 text-accent-green" />
                {section.title}
              </h4>
              <nav>
                <ul class="space-y-2 sm:space-y-2.5">
                  {section.links.map((link) => (
                    <li>
                      <a
                        href={link.href}
                        class="text-sm text-theme-secondary hover:text-accent-green transition-colors duration-fast inline-flex items-center gap-2 group min-h-[44px] active:text-accent-green font-medium font-body"
                      >
                        <span>{link.label}</span>
                        <Icon
                          name="mdi:arrow-right"
                          class="w-4 h-4 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-fast"
                        />
                      </a>
                    </li>
                  ))}
                </ul>
              </nav>
            </div>
          ))}
        </div>
      </section>
    </div>
  </div>

  <div class="col-span-full pt-1 sm:border-t sm:border-theme sm:pt-5 mt-1 sm:mt-6 pb-10 sm:pb-8 text-theme-secondary text-xs font-medium transition-colors">
    <div class="flex flex-col items-center gap-2 sm:hidden">
      <a href={privacyUrl} class="text-xs text-accent-green font-medium flex items-center font-body" aria-label="Privacy Policy">Privacy</a>
      <p class="text-xs flex items-center font-body">© {currentYear} AUXO</p>
      <a href={privacyUrl} class="flex items-center gap-1 text-xs text-accent-green font-medium font-body" aria-label="PDPL Compliant">
        <Icon name="mdi:shield-check" class="w-3.5 h-3.5 text-accent-green flex-shrink-0" />
        <span>PDPL</span>
      </a>
    </div>
    <div class="hidden sm:flex sm:flex-row items-center justify-center gap-3 sm:gap-4 lg:gap-5 flex-wrap">
      <p class="text-center font-body">© {currentYear} AUXO Data Labs. All rights reserved.</p>
      <span class="text-theme-tertiary" aria-hidden="true">•</span>
      <span class="flex items-center gap-2 whitespace-nowrap font-body">
        <Icon name="mdi:map-marker-outline" class="w-4 h-4 text-accent-green flex-shrink-0 transition-colors" />
        <span>Dubai, UAE</span>
      </span>
      <span class="text-theme-tertiary" aria-hidden="true">•</span>
      <a href={privacyUrl} class="flex items-center gap-2 whitespace-nowrap px-3 py-1.5 bg-accent-green/10 border border-accent-green rounded-lg hover:bg-accent-green/20 transition-all duration-fast group min-h-[44px] font-body" aria-label="View Privacy Policy - PDPL Compliant">
        <Icon name="mdi:shield-check" class="w-4 h-4 text-accent-green flex-shrink-0 transition-colors group-hover:scale-110" />
        <span class="text-xs font-semibold text-accent-green">PDPL Compliant</span>
      </a>
    </div>
  </div>
</footer>
