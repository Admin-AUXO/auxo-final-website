---
import ThemeToggle from "@/components/ui/ThemeToggle.astro";
import Logo from "./Logo.astro";
import NavLink from "@/components/navigation/NavLink.astro";
import NavDropdown from "@/components/navigation/NavDropdown.astro";
import CtaButton from "@/components/ui/CtaButton.astro";
import { getNavigationContent } from "@/lib/sanity/data";
import { getSiteConfigData } from "@/lib/sanity/siteConfig";
import { getBaseUrl, createUrl } from "@/utils/url";

const base = getBaseUrl();
const contactUrl = createUrl("contact");

const [{ items }, siteData] = await Promise.all([
  getNavigationContent(),
  getSiteConfigData(),
]);
const navItems = items.map(({ _key, ...item }) => ({
  ...item,
  dropdown: item.dropdown?.map(({ _key: dropKey, ...drop }) => drop),
}));
---

<nav id="main-navigation" class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md border-b border-accent-green/30 transition-all duration-normal will-change-transform">
  <div class="grid-container">
    <div class="col-span-full flex items-center justify-between h-14 sm:h-16 lg:h-18 relative min-w-0 w-full">
      <div class="flex-shrink-0 min-w-0 flex items-center overflow-hidden pr-2 lg:pr-0">
        <Logo size="md" showText={true} href={base} />
      </div>

      <div class="hidden lg:flex items-center gap-2 pointer-events-auto flex-shrink-0">
        {navItems.map((item, index) => 
          item.dropdown ? (
            <NavDropdown item={item} index={index} />
          ) : (
            <NavLink item={item} />
          )
        )}
        <div class="ml-2">
          <ThemeToggle />
        </div>
        <CtaButton
          href={contactUrl}
          class="ml-3"
          aria-label="Let's Talk - Contact us"
        >
          <span class="font-bold">Let's Talk</span>
        </CtaButton>
      </div>

      <div class="flex items-center gap-2 sm:gap-3 lg:hidden flex-shrink-0 pointer-events-auto mobile-nav-controls">
        <div class="flex items-center justify-center pointer-events-auto flex-shrink-0">
          <ThemeToggle />
        </div>
        <button type="button" id="mobile-menu-button" class="mobile-menu-button relative text-theme-secondary hover:text-theme-primary p-2 rounded-xl hover:bg-theme-surface/80 active:bg-theme-surface transition-all duration-fast focus:outline-none focus:ring-2 focus:ring-accent-green/50 focus:ring-offset-2 focus:ring-offset-theme-primary pointer-events-auto flex-shrink-0 min-w-[44px] min-h-[44px] w-[44px] h-[44px] flex items-center justify-center touch-manipulation group/btn" aria-label="Toggle mobile menu" aria-expanded="false" aria-controls="mobile-menu">
          <div class="relative w-6 h-6" aria-hidden="true">
            <svg class="absolute inset-0 w-6 h-6 menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path class="menu-open transition-all duration-fast" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M4 6h16M4 12h16M4 18h16"></path>
              <path class="menu-close absolute inset-0 opacity-0 transition-all duration-fast" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </div>
          <span class="absolute inset-0 bg-accent-green/5 rounded-xl opacity-0 group-hover/btn:opacity-100 transition-opacity duration-fast"></span>
        </button>
      </div>
    </div>
  </div>

  <div id="mobile-menu-overlay" class="mobile-menu-overlay lg:hidden fixed inset-0 z-[9997] bg-black/70 opacity-0 invisible transition-all duration-normal pointer-events-none" aria-hidden="true"></div>

  <div id="mobile-menu" class="mobile-menu lg:hidden fixed inset-0 z-[9998] opacity-0 invisible transition-all duration-normal pointer-events-none" aria-hidden="true">
    <div class="mobile-menu-header flex-shrink-0 bg-theme-primary border-b border-accent-green/30">
      <div class="grid-container">
        <div class="col-span-full flex items-center justify-between h-14 sm:h-16 relative min-w-0 w-full">
          <div class="flex-shrink-0 min-w-0 flex items-center overflow-hidden pr-2">
            <Logo size="md" showText={false} href={base} />
          </div>
          <div class="flex items-center gap-2 sm:gap-3 flex-shrink-0 pointer-events-auto">
            <button
              type="button"
              id="mobile-menu-close-header"
              class="mobile-menu-close-btn-header relative text-theme-secondary hover:text-theme-primary p-2 rounded-xl hover:bg-theme-surface/80 active:bg-theme-surface transition-all duration-fast focus:outline-none focus:ring-2 focus:ring-accent-green/50 focus:ring-offset-2 focus:ring-offset-theme-primary pointer-events-auto flex-shrink-0 min-w-[44px] min-h-[44px] w-[44px] h-[44px] flex items-center justify-center touch-manipulation group/close"
              aria-label="Close mobile menu"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              <span class="absolute inset-0 bg-accent-green/5 rounded-xl opacity-0 group-hover/close:opacity-100 transition-opacity duration-fast"></span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="mobile-menu-content flex-1 overflow-y-auto bg-theme-card">
      <div class="px-5 sm:px-7 py-4">
        <div class="space-y-3">
          {navItems.map((item, index) =>
            item.dropdown ? (
              <NavDropdown item={item} index={index} isMobile={true} />
            ) : (
              <NavLink item={item} isMobile={true} />
            )
          )}
        </div>

        <div class="space-y-5 mt-6">
          <div class="text-center">
            <p class="text-base text-theme-secondary mb-6 font-medium">Ready to transform your business?</p>
            <a
              href={contactUrl}
              class="nav-cta-mobile block w-full px-6 py-4 min-h-[56px] border-2 bg-theme-primary text-theme-secondary hover:bg-theme-surface hover:text-theme-primary font-bold rounded-xl hover:shadow-lg hover:shadow-accent-green/20 hover:-translate-y-0.5 active:translate-y-0 transition-all duration-normal text-center touch-manipulation flex items-center justify-center gap-3 text-lg shadow-md relative group/cta"
              aria-label="Let's Talk - Contact us"
            >
              <svg class="w-5 h-5 flex-shrink-0 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              <span class="relative z-10">Let's Talk</span>
              <span class="absolute inset-0 bg-accent-green/5 rounded-xl opacity-0 group-hover/cta:opacity-100 transition-opacity duration-fast"></span>
            </a>
          </div>

          <div class="text-center pt-5">
            <p class="text-sm text-theme-secondary">
              Need help? <a href={`mailto:${siteData.email}`} class="text-accent-green hover:underline font-medium transition-colors duration-fast">{siteData.email}</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <button
    type="button"
    id="mobile-menu-close"
    class="mobile-menu-close-btn lg:hidden fixed top-2 right-2 sm:top-3 sm:right-3 z-50 w-[44px] h-[44px] flex items-center justify-center rounded-xl text-theme-secondary hover:text-theme-primary bg-theme-primary border border-accent-green/30 hover:border-accent-green/50 transition-all duration-fast opacity-0 invisible pointer-events-none group/close"
    aria-label="Close mobile menu"
  >
    <svg class="w-5 h-5 relative z-10 group-hover/close:rotate-90 transition-transform duration-fast" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
    <span class="absolute inset-0 bg-accent-green/5 rounded-xl opacity-0 group-hover/close:opacity-100 transition-opacity duration-fast"></span>
  </button>
</nav>

<div class="h-16 sm:h-18 lg:h-20"></div>

<style>
  /* Navigation uses Tailwind classes for positioning with proper performance optimizations */
  #main-navigation {
    /* Performance optimizations for smooth scrolling */
    contain: layout style paint;
    transform: translateZ(0);
    backface-visibility: hidden;
  }

  /* Ensure navigation backdrop works across all browsers */
  #main-navigation {
    -webkit-backdrop-filter: blur(var(--blur-nav));
    backdrop-filter: blur(var(--blur-nav));
  }
</style>

<script>
  import { initializeNavigationComponents } from "@/scripts/navigation/index";

  if (typeof window !== 'undefined') {
    requestAnimationFrame(() => {
      try {
        initializeNavigationComponents();
      } catch (error) {
        console.warn('Navigation init warning:', error);
      }
    });
  }
</script>

