<div id="scroll-progress-bar" class="scroll-progress-bar" aria-hidden="true">
  <div class="scroll-progress-bar-fill"></div>
</div>

<style>
  .scroll-progress-bar {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    width: 100vw !important;
    height: var(--scroll-progress-height) !important;
    z-index: 2147483646 !important; /* One below navigation for proper layering */
    background: transparent;
    pointer-events: none;
  }

  .scroll-progress-bar-fill {
    height: 100%;
    width: var(--scroll-progress-width, 0%);
    background: linear-gradient(90deg, var(--accent-green) 0%, var(--accent-green) 100%);
    transform-origin: left;
    transition: width var(--duration-fast) ease-out;
  }

  @media (max-width: 640px) {
    .scroll-progress-bar {
      height: var(--scroll-progress-height-mobile);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .scroll-progress-bar-fill {
      transition: none;
    }
  }
</style>

<script>
  function initScrollProgressBar(): void {
    const progressBar = document.getElementById('scroll-progress-bar');
    const progressFill = progressBar?.querySelector('.scroll-progress-bar-fill') as HTMLElement;
    
    if (!progressBar || !progressFill) return;

    const lenis = window.lenis;

    function updateProgress(): void {
      const windowHeight = window.innerHeight;
      const documentHeight = document.documentElement.scrollHeight;
      const scrollTop = lenis?.scroll || window.scrollY || document.documentElement.scrollTop;
      
      const totalScrollableHeight = documentHeight - windowHeight;
      const scrollProgress = totalScrollableHeight > 0 
        ? (scrollTop / totalScrollableHeight) * 100 
        : 0;
      
      const progressValue = `${Math.min(100, Math.max(0, scrollProgress))}%`;
      progressFill.style.setProperty('--scroll-progress-width', progressValue);
    }

    if (lenis) {
      lenis.on('scroll', updateProgress);
    } else {
      let ticking = false;
      function requestTick(): void {
        if (!ticking) {
          requestAnimationFrame(() => {
            updateProgress();
            ticking = false;
          });
          ticking = true;
        }
      }
      window.addEventListener('scroll', requestTick, { passive: true });
    }

    window.addEventListener('resize', updateProgress, { passive: true });
    updateProgress();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initScrollProgressBar);
  } else {
    initScrollProgressBar();
  }
</script>


