<div id="scroll-progress-bar" class="fixed top-0 left-0 right-0 w-full z-[2147483647] h-[2px] sm:h-[3px] bg-transparent pointer-events-none" aria-hidden="true">
  <div class="scroll-progress-bar-fill"></div>
</div>

<style>
  #scroll-progress-bar {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    width: 100% !important;
    max-width: 100vw !important;
    transform: translateZ(0) !important;
    will-change: auto !important;
  }

  .scroll-progress-bar-fill {
    height: 100%;
    width: var(--scroll-progress-width, 0%);
    background: linear-gradient(90deg, var(--accent-green) 0%, var(--accent-green) 100%);
    transform-origin: left;
    transition: width var(--duration-fast) ease-out;
  }

  @media (prefers-reduced-motion: reduce) {
    .scroll-progress-bar-fill {
      transition: none;
    }
  }
</style>

<script>
  function initScrollProgressBar(): void {
    const progressBar = document.getElementById('scroll-progress-bar');
    const progressFill = progressBar?.querySelector('.scroll-progress-bar-fill') as HTMLElement;

    if (!progressBar || !progressFill) return;

    let lenis = window.lenis;
    let rafId: number | null = null;

    function updateProgress(): void {
      const windowHeight = window.innerHeight;
      const documentHeight = Math.max(
        document.body.scrollHeight,
        document.body.offsetHeight,
        document.documentElement.clientHeight,
        document.documentElement.scrollHeight,
        document.documentElement.offsetHeight
      );
      const scrollTop = lenis?.scroll || window.scrollY || window.pageYOffset || document.documentElement.scrollTop;

      const totalScrollableHeight = documentHeight - windowHeight;
      const scrollProgress = totalScrollableHeight > 0
        ? Math.min(100, Math.max(0, (scrollTop / totalScrollableHeight) * 100))
        : 0;

      const progressValue = `${scrollProgress}%`;
      progressFill.style.setProperty('--scroll-progress-width', progressValue);
    }

    function throttledUpdate(): void {
      if (rafId !== null) return;

      rafId = requestAnimationFrame(() => {
        updateProgress();
        rafId = null;
      });
    }

    if (lenis) {
      lenis.on('scroll', throttledUpdate);
    } else {
      window.addEventListener('scroll', throttledUpdate, { passive: true });
    }

    window.addEventListener('resize', () => {
      setTimeout(updateProgress, 100);
    }, { passive: true });

    // Initial update
    updateProgress();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initScrollProgressBar);
  } else {
    initScrollProgressBar();
  }
</script>


