---
import HighlightText from "./HighlightText.astro";
import { Icon } from "astro-icon/components";

export interface Props {
  title: string;
  subtitle?: string;
  highlight?: string | string[];
  subtitleHighlight?: string | string[];
  highlightClass?: string;
  subtitleHighlightClass?: string;
  icon?: string;
  iconClass?: string;
  titleClass?: string;
  subtitleClass?: string;
  wrapperClass?: string;
  center?: boolean;
}

const {
  title,
  subtitle,
  highlight,
  subtitleHighlight,
  highlightClass = "text-accent-green font-bold",
  subtitleHighlightClass = "text-accent-green font-semibold",
  icon,
  iconClass = "w-9 h-9 sm:w-10 sm:h-10 text-accent-green",
  titleClass = "",
  subtitleClass = "",
  wrapperClass = "",
  center = true,
} = Astro.props;

const textAlignClass = center ? "text-center" : "";
const defaultTitleClass = "text-h2 font-extrabold mb-4 sm:mb-5 lg:mb-6 text-theme-primary leading-tight tracking-tight font-display";
const defaultSubtitleClass = "text-base sm:text-body-lg lg:text-body-xl text-theme-secondary leading-relaxed max-w-3xl mx-auto font-body";
---

<div class={`${textAlignClass} mb-10 sm:mb-12 lg:mb-16 ${wrapperClass}`} data-aos="fade-down">
  {icon && (
    <div class="inline-flex items-center justify-center gap-3 sm:gap-4 mb-4 sm:mb-6">
      <Icon name={icon} class={iconClass} />
    </div>
  )}
  <h2 class={`${defaultTitleClass} ${titleClass}`}>
    {highlight ? (
      <HighlightText text={title} highlight={highlight} highlightClass={highlightClass} />
    ) : (
      title
    )}
  </h2>
  {subtitle && (
    <p class={`${defaultSubtitleClass} ${subtitleClass} mt-4`}>
      {subtitleHighlight ? (
        <HighlightText text={subtitle} highlight={subtitleHighlight} highlightClass={subtitleHighlightClass} />
      ) : (
        subtitle
      )}
    </p>
  )}
</div>

