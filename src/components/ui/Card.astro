---
export interface Props {
  class?: string;
  variant?: "default" | "glassmorphism" | "bordered";
  padding?: "sm" | "md" | "lg";
  hover?: boolean;
}

const {
  class: className = "",
  variant = "default",
  padding = "md",
  hover = false,
} = Astro.props;

const variantClasses = {
  default: "bg-theme-card",
  glassmorphism: "glassmorphism-card bg-theme-card border-2 border-accent-green/20",
  bordered: "bg-theme-card border-2 border-accent-green/20",
};

const paddingClasses = {
  sm: "p-3 sm:p-4",
  md: "p-4 sm:p-5 lg:p-6",
  lg: "p-5 sm:p-6 lg:p-8",
};

const hoverClasses = hover
  ? "hover:border-accent-green/60 hover:shadow-xl hover:shadow-accent-green/15 transition-all duration-normal group-hover:scale-[1.02]"
  : "";
---

<div
  class={`${variantClasses[variant]} ${paddingClasses[padding]} ${hoverClasses} rounded-2xl flex flex-col h-full ${className}`}
>
  <slot />
</div>


