---
import { Icon } from "astro-icon/components";
import HighlightText from "./HighlightText.astro";

export interface Props {
  variant?: "default" | "glassmorphism" | "bordered" | "highlight" | "service" | "capability";
  padding?: "sm" | "md" | "lg";
  hover?: boolean;
  title?: string;
  content?: string;
  contentHighlight?: string | string[];
  icon?: string;
  iconSize?: "sm" | "md" | "lg";
  accentTitle?: boolean;
  description?: string;
  metric?: string;
  link?: string;
  index?: number;
  isCarousel?: boolean;
  class?: string;
}

const {
  variant = "default",
  padding = "md",
  hover = false,
  title,
  content,
  contentHighlight,
  icon,
  iconSize,
  accentTitle = false,
  description,
  metric,
  link,
  index = 0,
  isCarousel = false,
  class: className = "",
} = Astro.props;

const isSimple = variant === "default" || variant === "glassmorphism" || variant === "bordered";
const isHighlight = variant === "highlight";
const isService = variant === "service";
const isCapability = variant === "capability";

const baseVariantClasses = {
  default: "bg-theme-card border border-border-theme",
  glassmorphism: "glassmorphism-card bg-theme-card border-2 border-accent-green/15",
  bordered: "bg-theme-card border-2 border-accent-green/15",
  highlight: "bg-theme-surface border border-theme-light",
  service: "bg-theme-card border border-accent-green/10",
  capability: "glassmorphism-card bg-theme-card border-2 border-accent-green/15",
};

const paddingClasses = {
  sm: "p-4 sm:p-5",
  md: "p-5 sm:p-6 lg:p-7",
  lg: "p-6 sm:p-7 lg:p-9",
};

const hoverClasses = hover
  ? "hover:border-accent-green/50 hover:shadow-lg transition-all duration-normal"
  : "";

const iconConfig = {
  sm: { container: "w-8 h-8 sm:w-9 sm:h-9", icon: "w-4 h-4 sm:w-4.5 sm:h-4.5", scale: "group-hover:scale-105" },
  md: { container: "w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16", icon: "w-6 h-6 sm:w-7 sm:h-7 lg:w-8 lg:h-8", scale: "group-hover:scale-110 group-hover:rotate-6" },
  lg: { container: "w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16", icon: "w-7 h-7 sm:w-8 sm:h-8", scale: "group-hover:scale-105" },
};

const getIconSizeConfig = () => {
  if (iconSize) return iconConfig[iconSize];
  if (isCarousel) return iconConfig.sm;
  return iconConfig.md;
};

const iconSizeConfig = getIconSizeConfig();
---

{isSimple && (
  <div
    class={`${baseVariantClasses[variant]} ${paddingClasses[padding]} ${hoverClasses} rounded-2xl flex flex-col h-full ${className}`}
  >
    <slot />
  </div>
)}

{isHighlight && (
  <div
    class={`highlight-card ${baseVariantClasses.highlight} rounded-xl p-6 sm:p-8 lg:p-10 relative overflow-hidden group hover:border-accent-green/30 transition-all duration-300 ${className}`}
  >
    <div class="absolute inset-0 bg-gradient-to-br from-accent-green/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
    <div class="relative z-10">
      {title && icon && (
        <div class="flex items-center gap-3 mb-4 sm:mb-6">
          <Icon name={icon} class="w-6 h-6 sm:w-7 sm:h-7 text-accent-green flex-shrink-0" />
          <h3 class={`text-h3 font-bold ${accentTitle ? 'text-accent-green' : 'text-theme-primary'} font-display`}>
            {title}
          </h3>
        </div>
      )}
      {title && !icon && (
        <h3 class={`text-h3 font-bold mb-4 sm:mb-6 ${accentTitle ? 'text-accent-green' : 'text-theme-primary'} font-display`}>
          {title}
        </h3>
      )}
      {content && (
        <p class="text-body-lg sm:text-body-xl text-theme-secondary leading-relaxed font-body">
          {contentHighlight ? (
            <HighlightText text={content} highlight={contentHighlight} />
          ) : (
            content
          )}
        </p>
      )}
      <slot />
    </div>
  </div>
)}

{isService && (
  <div
    class="service-card-redesigned group h-full flex flex-col"
    data-index={index}
    data-variant={isCarousel ? "carousel" : "grid"}
    data-reveal="fade-up"
    data-reveal-duration="600"
    data-reveal-delay={index * 100}
    data-reveal-easing="ease-out-cubic"
  >
    <div class={`relative h-full flex flex-col ${baseVariantClasses.service} overflow-hidden transition-all duration-500 hover:border-accent-green/40 ${isCarousel ? "hover:shadow-lg hover:shadow-accent-green/15" : "hover:shadow-xl hover:shadow-accent-green/20 hover:-translate-y-1"}`}>
      <div class={`absolute top-0 left-0 right-0 ${isCarousel ? "h-0.5" : "h-1"} bg-gradient-to-r from-accent-green/0 via-accent-green/30 to-accent-green/0 group-hover:via-accent-green/60 transition-all duration-500`} />
      <div class="absolute inset-0 opacity-[0.02] group-hover:opacity-[0.04] transition-opacity duration-500 service-card-pattern" />
      <div class={`relative z-10 flex-grow flex flex-col ${isCarousel ? "gap-0" : "px-6 pt-6 pb-6 sm:px-8 sm:pt-8 sm:pb-8 lg:px-10 lg:pt-10 lg:pb-10"}`}>
        {isCarousel ? (
          <>
            <div class="flex items-center justify-between mb-2">
              <h3 class="font-extrabold text-theme-primary tracking-tight group-hover:text-accent-green transition-colors duration-500 font-display">{title}</h3>
              <div class={`relative ${iconSizeConfig.container} bg-gradient-to-br from-accent-green/20 to-accent-green/5 flex items-center justify-center border border-accent-green/25 group-hover:border-accent-green/50 group-hover:from-accent-green/30 group-hover:to-accent-green/10 group-hover:shadow-md group-hover:shadow-accent-green/20 transition-all duration-500 ${iconSizeConfig.scale} flex-shrink-0 ml-3`}>
                {icon && <Icon name={icon} class={`${iconSizeConfig.icon} text-accent-green transition-transform duration-500`} />}
              </div>
            </div>
            <p class="mb-3 text-body-lg text-theme-secondary font-normal flex-grow font-body">{description}</p>
          </>
        ) : (
          <>
            <div class="mb-4">
              <div class={`relative ${iconSizeConfig.container} bg-gradient-to-br from-accent-green/20 to-accent-green/5 flex items-center justify-center border border-accent-green/25 group-hover:border-accent-green/50 group-hover:from-accent-green/30 group-hover:to-accent-green/10 group-hover:shadow-lg group-hover:shadow-accent-green/25 transition-all duration-500 ${iconSizeConfig.scale}`}>
                {icon && <Icon name={icon} class={`${iconSizeConfig.icon} text-accent-green transition-transform duration-500`} />}
              </div>
            </div>
            <h3 class="text-xl sm:text-2xl lg:text-3xl leading-tight mb-2 sm:mb-2.5 lg:mb-4 font-extrabold text-theme-primary tracking-tight group-hover:text-accent-green transition-colors duration-500 font-display">{title}</h3>
            <p class="text-body-lg sm:text-body-xl leading-relaxed mb-3.5 sm:mb-4 lg:mb-6 xl:mb-8 text-theme-secondary font-normal flex-grow font-body">{description}</p>
          </>
        )}
        {link && (
          <a href={link} class={isCarousel ? "inline-flex items-center gap-1.5 text-accent-green hover:text-accent-green/80 font-semibold mt-auto transition-all duration-300 group/link w-fit font-body border-b border-accent-green/20 hover:border-accent-green/60 pb-0.5 text-body-base" : "inline-flex items-center gap-1.5 text-accent-green hover:text-accent-green/80 font-semibold text-body-base sm:text-body-lg transition-all duration-300 group/link w-fit font-body border-b border-accent-green/20 hover:border-accent-green/60 pb-0.5"}>
            <span>Learn more</span>
            <Icon name="mdi:arrow-right" class={`${isCarousel ? "w-3.5 h-3.5" : "w-4 h-4"} group-hover/link:translate-x-1 transition-transform duration-300`} />
          </a>
        )}
      </div>
      <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-accent-green/0 group-hover:bg-accent-green/30 transition-all duration-500" />
    </div>
  </div>
)}

{isCapability && (
  <div
    class={`${baseVariantClasses.capability} ${paddingClasses.lg} ${isCarousel ? "capability-card-carousel" : "group capability-card-redesigned h-full relative"} border-accent-green/10 rounded-2xl flex flex-col h-full ${hoverClasses} ${className}`}
    data-reveal={isCarousel ? "fade-up" : "zoom-in"}
    data-reveal-duration={isCarousel ? "500" : "600"}
    data-reveal-delay={isCarousel ? "0" : index * 100}
    data-reveal-easing="ease-out-cubic"
  >
    {!isCarousel && (
      <div class="absolute top-0 right-0 w-24 h-24 bg-accent-green/5 rounded-bl-full opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
    )}

    <div class="relative z-10 flex flex-col h-full">
      {isCarousel ? (
        <>
          <div class="flex items-center justify-between mb-2.5">
            <h3 class="font-bold text-theme-primary leading-tight transition-colors duration-300 font-display">
              {title}
            </h3>
            <div class={`relative ${iconSizeConfig.container} bg-gradient-to-br from-accent-green/15 to-accent-green/5 rounded-xl flex items-center justify-center border border-accent-green/20 group-hover:border-accent-green/50 group-hover:from-accent-green/25 group-hover:to-accent-green/10 group-hover:shadow-md group-hover:shadow-accent-green/20 transition-all duration-500 flex-shrink-0 ml-3`}>
              {icon && <Icon name={icon} class={`${iconSizeConfig.icon} text-accent-green transition-transform duration-500`} />}
            </div>
          </div>
          <p class="mb-4 text-body-lg text-theme-secondary leading-relaxed flex-1 font-body">{description}</p>
          <div class="mt-auto pt-4 sm:pt-5 border-t border-accent-green/10 group-hover:border-accent-green/30 transition-colors duration-500">
            <div class="metric relative bg-gradient-to-br from-accent-green/5 via-accent-green/3 to-transparent rounded-lg px-3 py-2.5 sm:px-4 sm:py-3 border border-accent-green/15 group-hover:border-accent-green/40 group-hover:from-accent-green/10 group-hover:via-accent-green/5 group-hover:shadow-md group-hover:shadow-accent-green/10 transition-all duration-500">
              <div class={isCarousel ? "text-center" : "text-left"}>
                <span class="font-mono font-bold text-xs sm:text-sm text-accent-green whitespace-pre-line leading-tight block">
                  {metric}
                </span>
              </div>
            </div>
          </div>
        </>
      ) : (
        <>
          <div class="mb-4 sm:mb-5 lg:mb-6">
            <div class={`relative ${iconSizeConfig.container} bg-gradient-to-br from-accent-green/15 to-accent-green/5 rounded-xl flex items-center justify-center border border-accent-green/20 group-hover:border-accent-green/50 group-hover:from-accent-green/25 group-hover:to-accent-green/10 group-hover:shadow-lg group-hover:shadow-accent-green/25 transition-all duration-500 group-hover:scale-105`}>
              {icon && <Icon name={icon} class={`${iconSizeConfig.icon} text-accent-green transition-transform duration-500`} />}
            </div>
          </div>
          <h3 class="text-lg sm:text-xl lg:text-2xl mb-3 sm:mb-4 lg:mb-5 font-bold text-theme-primary leading-tight transition-colors duration-300 font-display group-hover:text-accent-green">
            {title}
          </h3>
          <p class="text-body-lg sm:text-body-xl mb-4 sm:mb-5 lg:mb-6 xl:mb-8 text-theme-secondary leading-relaxed flex-1 font-body">
            {description}
          </p>
          <div class="mt-auto pt-5 sm:pt-6 lg:pt-8 border-t border-accent-green/10 group-hover:border-accent-green/30 transition-colors duration-500">
            <div class="relative">
              <div class="absolute inset-0 bg-accent-green/5 rounded-lg blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
              <div class="metric relative bg-gradient-to-br from-accent-green/5 via-accent-green/3 to-transparent rounded-lg px-4 sm:px-5 py-3 sm:py-4 border border-accent-green/15 group-hover:border-accent-green/40 group-hover:from-accent-green/10 group-hover:via-accent-green/5 group-hover:shadow-lg group-hover:shadow-accent-green/20 transition-all duration-500">
                <div class={isCarousel ? "text-center" : "text-left"}>
                  <span class="font-mono font-bold text-sm sm:text-base text-accent-green whitespace-pre-line leading-tight block">
                    {metric}
                  </span>
                </div>
              </div>
            </div>
          </div>
        </>
      )}
    </div>
  </div>
)}
