---
import { Icon } from "astro-icon/components";

export interface Props {
  icon: string;
  title: string;
  description: string;
  link?: string;
  index?: number;
  variant?: "grid" | "carousel";
}

const {
  icon,
  title,
  description,
  link,
  index = 0,
  variant = "grid",
} = Astro.props;
---

<div class="service-card-redesigned group h-full flex flex-col" data-index={index}>
  <div class="relative h-full flex flex-col bg-theme-card border border-accent-green/10 rounded-2xl overflow-hidden transition-all duration-500 hover:border-accent-green/40 hover:shadow-xl hover:shadow-accent-green/10 hover:-translate-y-1">
    {/* Top accent bar */}
    <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-accent-green/0 via-accent-green/30 to-accent-green/0 group-hover:via-accent-green/60 transition-all duration-500" />
    
    {/* Background pattern */}
    <div class="absolute inset-0 opacity-[0.02] group-hover:opacity-[0.04] transition-opacity duration-500 service-card-pattern" />
    
    {/* Icon container */}
    <div class={`relative ${variant === "carousel" ? "px-5 pt-5 sm:px-6 sm:pt-6" : "px-6 pt-6 sm:px-8 sm:pt-8 lg:px-10 lg:pt-10"} pb-3 sm:pb-4`}>
      <div class="relative inline-flex">
        {/* Accent glow */}
        <div class="absolute -inset-4 bg-accent-green/10 rounded-2xl blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
        
        {/* Icon */}
        <div class={`relative ${variant === "carousel" ? "w-11 h-11 sm:w-12 sm:h-12" : "w-12 h-12 sm:w-14 sm:h-14 lg:w-16 lg:h-16"} bg-gradient-to-br from-accent-green/20 via-accent-green/10 to-transparent rounded-xl flex items-center justify-center border border-accent-green/20 group-hover:border-accent-green/50 group-hover:bg-accent-green/10 transition-all duration-500 group-hover:scale-110 group-hover:rotate-6`}>
          <Icon
            name={icon}
            class={`${variant === "carousel" ? "w-5 h-5 sm:w-6 sm:h-6" : "w-6 h-6 sm:w-7 sm:h-7 lg:w-8 lg:h-8"} text-accent-green transition-transform duration-500`}
          />
        </div>
      </div>
    </div>
    
    {/* Content */}
    <div class={`relative z-10 flex-grow flex flex-col ${variant === "carousel" ? "px-5 pb-5 sm:px-6 sm:pb-6" : "px-6 pb-6 sm:px-8 sm:pb-8 lg:px-10 lg:pb-10"} pt-0`}>
      <h3 class={`${variant === "carousel" ? "text-lg sm:text-xl" : "text-xl sm:text-2xl lg:text-3xl"} font-extrabold text-theme-primary leading-tight tracking-tight mb-2.5 sm:mb-3 ${variant === "carousel" ? "" : "lg:mb-4"} group-hover:text-accent-green transition-colors duration-500 font-display`}>
        {title}
      </h3>
      
      <p class={`${variant === "carousel" ? "text-sm sm:text-base" : "text-base sm:text-lg"} text-theme-secondary leading-relaxed font-normal mb-4 sm:mb-5 ${variant === "carousel" ? "" : "lg:mb-6 xl:mb-8"} flex-grow font-body`}>
        {description}
      </p>
      
      {/* CTA link */}
      {link && (
        <a
          href={link}
          class="inline-flex items-center gap-2 text-accent-green hover:text-accent-green/80 font-semibold text-sm sm:text-base transition-all duration-300 group/link w-fit font-body border-b border-accent-green/20 hover:border-accent-green/60 pb-1"
        >
          <span>Learn more</span>
          <Icon
            name="mdi:arrow-right"
            class="w-4 h-4 group-hover/link:translate-x-1 transition-transform duration-300"
          />
        </a>
      )}
    </div>
    
    {/* Bottom accent */}
    <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-accent-green/0 group-hover:bg-accent-green/30 transition-all duration-500" />
  </div>
</div>
