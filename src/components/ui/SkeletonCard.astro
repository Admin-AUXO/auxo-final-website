---
import Skeleton from './Skeleton.astro';

export interface Props {
  variant?: 'service' | 'team' | 'case-study' | 'blog';
  class?: string;
}

const { variant = 'service', class: className = '' } = Astro.props;
---

{variant === 'service' && (
  <div class={`skeleton-card service-card ${className}`}>
    <Skeleton variant="image" height="12rem" />
    <div class="skeleton-content">
      <Skeleton variant="title" width="80%" />
      <div class="skeleton-text-group">
        <Skeleton variant="text" width="100%" />
        <Skeleton variant="text" width="90%" />
        <Skeleton variant="text" width="95%" />
      </div>
      <Skeleton variant="button" />
    </div>
  </div>
)}

{variant === 'team' && (
  <div class={`skeleton-card team-card ${className}`}>
    <Skeleton variant="avatar" width="5rem" height="5rem" rounded={true} />
    <div class="skeleton-content">
      <Skeleton variant="title" width="60%" height="1.5rem" />
      <Skeleton variant="text" width="50%" height="0.875rem" />
      <div class="skeleton-text-group">
        <Skeleton variant="text" width="100%" />
        <Skeleton variant="text" width="95%" />
      </div>
    </div>
  </div>
)}

{variant === 'case-study' && (
  <div class={`skeleton-card case-study-card ${className}`}>
    <Skeleton variant="image" height="16rem" />
    <div class="skeleton-content">
      <Skeleton variant="text" width="40%" height="0.75rem" />
      <Skeleton variant="title" width="85%" />
      <div class="skeleton-text-group">
        <Skeleton variant="text" width="100%" />
        <Skeleton variant="text" width="100%" />
        <Skeleton variant="text" width="80%" />
      </div>
      <div class="skeleton-tags">
        <Skeleton variant="button" width="5rem" height="1.5rem" />
        <Skeleton variant="button" width="6rem" height="1.5rem" />
        <Skeleton variant="button" width="4.5rem" height="1.5rem" />
      </div>
    </div>
  </div>
)}

{variant === 'blog' && (
  <div class={`skeleton-card blog-card ${className}`}>
    <Skeleton variant="image" height="14rem" />
    <div class="skeleton-content">
      <Skeleton variant="text" width="30%" height="0.75rem" />
      <Skeleton variant="title" width="90%" />
      <div class="skeleton-text-group">
        <Skeleton variant="text" width="100%" />
        <Skeleton variant="text" width="100%" />
        <Skeleton variant="text" width="85%" />
      </div>
      <div class="skeleton-meta">
        <Skeleton variant="avatar" width="2rem" height="2rem" rounded={true} />
        <Skeleton variant="text" width="8rem" height="0.875rem" />
      </div>
    </div>
  </div>
)}

<style>
  .skeleton-card {
    background: var(--bg-card);
    border: 1px solid var(--border-theme);
    border-radius: 1rem;
    overflow: hidden;
  }

  .skeleton-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .skeleton-text-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .skeleton-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .skeleton-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .service-card .skeleton-content {
    gap: 1.25rem;
  }

  .team-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 2rem 1.5rem;
  }

  .team-card .skeleton-content {
    width: 100%;
    align-items: center;
  }

  .case-study-card .skeleton-content {
    gap: 1rem;
  }

  .blog-card .skeleton-content {
    gap: 1rem;
  }

  @media (max-width: 640px) {
    .skeleton-content {
      padding: 1rem;
    }

    .team-card {
      padding: 1.5rem 1rem;
    }
  }
</style>
