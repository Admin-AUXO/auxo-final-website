---
import { Icon } from "astro-icon/components";

export interface Props {
  icon?: string;
  title: string;
  description: string;
  class?: string;
  accentColor?: "green" | "default";
}

const {
  icon,
  title,
  description,
  class: className = "",
  accentColor = "green",
} = Astro.props;
---

<div class={`feature-card h-full bg-theme-card border border-theme-light rounded-xl p-6 sm:p-8 lg:p-10 relative overflow-hidden group hover:border-accent-green/40 transition-all duration-300 ${className}`}>
  <div class="absolute top-0 right-0 w-32 h-32 bg-accent-green/5 rounded-full blur-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
  <div class="relative z-10">
    {icon && (
      <div class="mb-4 sm:mb-6">
        <div class="w-12 h-12 sm:w-14 sm:h-14 bg-accent-green/10 border-2 border-accent-green/30 rounded-lg flex items-center justify-center group-hover:bg-accent-green/20 group-hover:border-accent-green/50 transition-all duration-300">
          <Icon name={icon} class="w-6 h-6 sm:w-7 sm:h-7 text-accent-green" />
        </div>
      </div>
    )}
    <h3 class="text-h4 font-bold text-theme-primary mb-3 sm:mb-4 font-display">
      {title}
    </h3>
    <p class="text-body-base sm:text-body-lg text-theme-secondary leading-relaxed font-body">
      {description}
    </p>
  </div>
</div>

