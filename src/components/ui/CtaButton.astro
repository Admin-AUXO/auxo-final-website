---
import Button from "./Button.astro";
import { Icon } from "astro-icon/components";

export interface Props {
  text: string;
  href: string;
  variant?: "primary" | "secondary" | "tertiary" | "ghost" | "outline";
  size?: "sm" | "md" | "lg";
  class?: string;
  wrapperClass?: string;
  icon?: string;
  iconClass?: string;
}

const {
  text,
  href,
  variant = "primary",
  size = "lg",
  class: className = "",
  wrapperClass = "",
  icon = "mdi:arrow-right",
  iconClass = "w-4 h-4 flex-shrink-0",
} = Astro.props;

const defaultButtonClass = "w-full sm:w-auto font-bold shadow-lg shadow-accent-green/20 justify-center hover:shadow-xl hover:shadow-accent-green/30 hover:-translate-y-0.5 transition-all min-h-[48px] sm:min-h-[44px] cta-button flex-nowrap px-6 sm:px-8";
---

<div class={`text-center ${wrapperClass}`}>
  <Button
    variant={variant}
    size={size}
    href={href}
    class={`${defaultButtonClass} ${className}`}
  >
    <span class="whitespace-nowrap">{text}</span>
    {icon && <Icon name={icon} class={iconClass} />}
  </Button>
</div>

